{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler", // Correcto para Astro/Vite moderno
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true, // ðŸ‘ˆ CLAVE: Esto evita que intente crear archivos .js
    "allowJs": true, // Permite mezclar TS y JS
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "astro.config.mjs"]
}