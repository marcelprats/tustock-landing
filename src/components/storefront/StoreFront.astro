---
import Layout from '~/layouts/Layout.astro'; // Layout base sin men√∫s corporativos
import Header from '~/components/widgets/Header.astro';
import Footer from '~/components/widgets/Footer.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';
import { shopNavigation } from '~/navigation';

const { tenant, shopName } = Astro.props;

const storeFooterData = {
  links: [],
  secondaryLinks: [],
  socialLinks: [],
  footNote: `
    <span class="text-sm text-gray-500">
      ¬© 2025 <b>${shopName}</b> ¬∑ Tecnolog√≠a por <a class="text-blue-600 font-bold" href="https://tustock.app">TuStock</a>
    </span>
  `,
};
---

<Layout metadata={{ title: `${shopName} - Tienda Online` }}>
  
  <Header 
    links={shopNavigation.links} 
    actions={shopNavigation.actions} 
    isSticky 
    showToggleTheme
  >
    <span slot="logo" class="text-2xl font-bold uppercase tracking-wider text-gray-900 dark:text-white">
       üè™ {shopName}
    </span>
  </Header>

  <Hero
    title={`Bienvenido a <span class="text-blue-600 dark:text-blue-400">${shopName}</span>`}
    subtitle="Calidad y confianza en cada producto. Consulta nuestro cat√°logo en tiempo real."
    image={{ 
        src: 'https://images.unsplash.com/photo-1604719312566-b7cb0463d3a6?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80', 
        alt: shopName 
    }}
    actions={[{ text: 'Ver Cat√°logo', href: '#catalogo', variant: 'primary' }]}
  />

  <div id="catalogo" class="py-16 bg-gray-50 dark:bg-slate-900 scroll-mt-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 text-center">
        <h2 class="text-3xl font-bold mb-8">Nuestros Productos</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {[1, 2, 3].map((i) => (
                <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-sm p-6 border border-gray-100 dark:border-slate-700">
                    <div class="h-40 bg-slate-100 dark:bg-slate-700 rounded-xl mb-4 flex items-center justify-center">
                        <span class="text-slate-400">Sin imagen</span>
                    </div>
                    <h3 class="font-bold">Producto Ejemplo {i}</h3>
                    <p class="text-blue-600 font-black mt-2">Precio en tienda</p>
                </div>
            ))}
        </div>
    </div>
  </div>

  <div id="ubicacion" class="scroll-mt-16">
      <Features2
        title="Contacto"
        columns={3}
        items={[
          { title: 'Horarios', description: 'Cons√∫ltanos directamente', icon: 'tabler:clock' },
          { title: 'Ubicaci√≥n', description: 'Vis√≠tanos en nuestra tienda f√≠sica', icon: 'tabler:map-pin' },
          { title: 'Email', description: 'hola@' + tenant + '.tustock.app', icon: 'tabler:mail' },
        ]}
      />
  </div>

  <Footer {...storeFooterData} />
</Layout>