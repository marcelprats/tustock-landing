---
const { tenant } = Astro.props;
import Layout from '~/layouts/PageLayout.astro';
---

<Layout metadata={{ title: `Panel de ${tenant}` }}>
  <style is:global>
    /* Ocultamos el menú solo cuando estamos aquí */
    body:has(.is-app-dashboard) header nav,
    body:has(.is-app-dashboard) [data-aw-toggle-menu] { 
      display: none !important; 
    }
  </style>

  <div class="is-app-dashboard flex items-center justify-center h-screen bg-blue-50 dark:bg-slate-900">
    <div class="text-center p-10 bg-white dark:bg-slate-800 shadow-xl rounded-xl">
      <h1 class="text-4xl font-bold text-blue-600 mb-4">¡Hola {tenant}!</h1>
      <p class="text-xl text-gray-600 dark:text-gray-300">Bienvenido a tu panel.</p>
      <div class="mt-6">
        <a href="/login" class="px-6 py-3 bg-gray-800 text-white rounded-lg">Cerrar Sesión</a>
      </div>
    </div>
  </div>
</Layout>