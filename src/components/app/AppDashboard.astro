---
const { tenant } = Astro.props;
import Layout from '~/layouts/PageLayout.astro';

// 1. CONFIGURACIÓN DEL HEADER PRIVADO
// Este menú solo se verá cuando estés dentro del subdominio
const dashboardHeader = {
  // Sin enlaces de navegación (Producto, Precios...)
  links: [], 
  // Botones de acción específicos para el usuario logueado
  actions: [
    {
      text: `Hola, ${tenant}`,
      variant: 'link', 
      href: '#',
      icon: 'tabler:user',
    },
    {
      text: 'Cerrar Sesión',
      href: 'https://tustock.app/logout', // (Luego crearemos esta ruta si hace falta)
      variant: 'secondary',
      icon: 'tabler:logout',
    },
  ],
};
---

{/* Pasamos el 'headerData' personalizado al Layout */}
<Layout metadata={{ title: `Panel de ${tenant}` }} headerData={dashboardHeader}>
  
  {/* FONDO GRIS SUAVE PARA DAR SENSACIÓN DE APP */}
  <div class="bg-gray-50 dark:bg-slate-900 min-h-screen pb-20">
    
    {/* CABECERA DEL DASHBOARD (Bienvenida y Stats Rápidos) */}
    <div class="bg-white dark:bg-slate-800 border-b border-gray-200 dark:border-slate-700 pt-24 pb-12 px-4 sm:px-6">
      <div class="max-w-7xl mx-auto">
        <div class="md:flex md:items-center md:justify-between">
          <div class="min-w-0 flex-1">
            <h2 class="text-2xl font-bold leading-7 text-gray-900 dark:text-white sm:truncate sm:text-3xl sm:tracking-tight">
              Panel de Control
            </h2>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
              Gestión en tiempo real de <span class="font-semibold text-blue-600 capitalize">{tenant}</span>.
            </p>
          </div>
          <div class="mt-4 flex md:ml-4 md:mt-0">
            <button type="button" class="ml-3 inline-flex items-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600">
              <span class="mr-2 text-lg">+</span> Nuevo Producto
            </button>
          </div>
        </div>

        {/* STATS CARDS */}
        <dl class="mt-8 grid grid-cols-1 gap-5 sm:grid-cols-3">
          {/* Card 1 */}
          <div class="overflow-hidden rounded-lg bg-white dark:bg-slate-900 px-4 py-5 shadow border border-gray-100 dark:border-slate-700 sm:p-6">
            <dt class="truncate text-sm font-medium text-gray-500 dark:text-gray-400">Valor del Inventario</dt>
            <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900 dark:text-white">12.450€</dd>
            <div class="mt-2 flex items-center text-sm text-green-600">
              <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" /></svg>
              <span>+4.5% vs mes pasado</span>
            </div>
          </div>
          {/* Card 2 */}
          <div class="overflow-hidden rounded-lg bg-white dark:bg-slate-900 px-4 py-5 shadow border border-gray-100 dark:border-slate-700 sm:p-6">
            <dt class="truncate text-sm font-medium text-gray-500 dark:text-gray-400">Productos Bajos de Stock</dt>
            <dd class="mt-1 text-3xl font-semibold tracking-tight text-red-600">3</dd>
            <div class="mt-2 flex items-center text-sm text-gray-500">
              <span>Requiere atención</span>
            </div>
          </div>
          {/* Card 3 */}
          <div class="overflow-hidden rounded-lg bg-white dark:bg-slate-900 px-4 py-5 shadow border border-gray-100 dark:border-slate-700 sm:p-6">
            <dt class="truncate text-sm font-medium text-gray-500 dark:text-gray-400">Movimientos Hoy</dt>
            <dd class="mt-1 text-3xl font-semibold tracking-tight text-gray-900 dark:text-white">24</dd>
            <div class="mt-2 flex items-center text-sm text-blue-600">
              <span>18 ventas, 6 entradas</span>
            </div>
          </div>
        </dl>
      </div>
    </div>

    {/* ZONA DE ACCIONES RÁPIDAS Y TABLA */}
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mt-8">
      
      <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3 mb-8">
        {/* Acción Rápida 1 */}
        <a href="#" class="group relative flex items-center space-x-3 rounded-lg border border-gray-300 dark:border-slate-700 bg-white dark:bg-slate-800 px-6 py-5 shadow-sm focus-within:ring-2 focus-within:ring-blue-500 hover:border-gray-400">
          <div class="flex-shrink-0 bg-blue-100 dark:bg-blue-900 p-3 rounded-lg text-blue-600 dark:text-blue-300">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" /></svg>
          </div>
          <div class="min-w-0 flex-1">
            <span class="absolute inset-0" aria-hidden="true"></span>
            <p class="text-sm font-medium text-gray-900 dark:text-white">Añadir Entrada Manual</p>
            <p class="truncate text-sm text-gray-500">Sin escanear</p>
          </div>
        </a>

        {/* Acción Rápida 2 */}
        <a href="#" class="group relative flex items-center space-x-3 rounded-lg border border-gray-300 dark:border-slate-700 bg-white dark:bg-slate-800 px-6 py-5 shadow-sm focus-within:ring-2 focus-within:ring-blue-500 hover:border-gray-400">
          <div class="flex-shrink-0 bg-purple-100 dark:bg-purple-900 p-3 rounded-lg text-purple-600 dark:text-purple-300">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
          </div>
          <div class="min-w-0 flex-1">
            <span class="absolute inset-0" aria-hidden="true"></span>
            <p class="text-sm font-medium text-gray-900 dark:text-white">Escanear Factura</p>
            <p class="truncate text-sm text-gray-500">Usar la cámara o subir PDF</p>
          </div>
        </a>

        {/* Acción Rápida 3 */}
        <a href="#" class="group relative flex items-center space-x-3 rounded-lg border border-gray-300 dark:border-slate-700 bg-white dark:bg-slate-800 px-6 py-5 shadow-sm focus-within:ring-2 focus-within:ring-blue-500 hover:border-gray-400">
          <div class="flex-shrink-0 bg-green-100 dark:bg-green-900 p-3 rounded-lg text-green-600 dark:text-green-300">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>
          </div>
          <div class="min-w-0 flex-1">
            <span class="absolute inset-0" aria-hidden="true"></span>
            <p class="text-sm font-medium text-gray-900 dark:text-white">Generar Reporte</p>
            <p class="truncate text-sm text-gray-500">Excel o PDF</p>
          </div>
        </a>
      </div>

      {/* TABLA DE MOVIMIENTOS RECIENTES */}
      <div class="bg-white dark:bg-slate-800 shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl">
        <div class="border-b border-gray-200 dark:border-slate-700 px-4 py-5 sm:px-6">
          <h3 class="text-base font-semibold leading-6 text-gray-900 dark:text-white">Últimos Movimientos</h3>
        </div>
        <ul role="list" class="divide-y divide-gray-100 dark:divide-slate-700">
          <li class="relative flex justify-between gap-x-6 px-4 py-5 hover:bg-gray-50 dark:hover:bg-slate-700/50 sm:px-6">
            <div class="flex min-w-0 gap-x-4">
              <div class="min-w-0 flex-auto">
                <p class="text-sm font-semibold leading-6 text-gray-900 dark:text-white">
                  <span class="absolute inset-x-0 -top-px bottom-0"></span>
                  Salida: Coca-Cola Zero 33cl
                </p>
                <p class="mt-1 flex text-xs leading-5 text-gray-500">
                  <span class="relative truncate">Venta TPV #402</span>
                </p>
              </div>
            </div>
            <div class="flex items-center gap-x-4">
              <div class="hidden sm:flex sm:flex-col sm:items-end">
                <p class="text-sm leading-6 text-gray-900 dark:text-white">- 24 un.</p>
                <p class="mt-1 text-xs leading-5 text-gray-500">Hace 5 min</p>
              </div>
              <svg class="h-5 w-5 flex-none text-red-500" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm.75-11.25a.75.75 0 00-1.5 0v4.59L7.3 9.24a.75.75 0 00-1.06 1.06l3.25 3.25a.75.75 0 001.06 0l3.25-3.25a.75.75 0 10-1.06-1.06l-1.95 1.95v-4.59z" clip-rule="evenodd" /></svg>
            </div>
          </li>
          <li class="relative flex justify-between gap-x-6 px-4 py-5 hover:bg-gray-50 dark:hover:bg-slate-700/50 sm:px-6">
            <div class="flex min-w-0 gap-x-4">
              <div class="min-w-0 flex-auto">
                <p class="text-sm font-semibold leading-6 text-gray-900 dark:text-white">
                  <span class="absolute inset-x-0 -top-px bottom-0"></span>
                  Entrada: Patatas Lay's
                </p>
                <p class="mt-1 flex text-xs leading-5 text-gray-500">
                  <span class="relative truncate">Albarán PROV-2201</span>
                </p>
              </div>
            </div>
            <div class="flex items-center gap-x-4">
              <div class="hidden sm:flex sm:flex-col sm:items-end">
                <p class="text-sm leading-6 text-gray-900 dark:text-white">+ 50 un.</p>
                <p class="mt-1 text-xs leading-5 text-gray-500">Hace 2 horas</p>
              </div>
              <svg class="h-5 w-5 flex-none text-green-500" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm.75-11.25a.75.75 0 00-1.5 0v2.5h-2.5a.75.75 0 000 1.5h2.5v2.5a.75.75 0 001.5 0v-2.5h2.5a.75.75 0 000-1.5h-2.5v-2.5z" clip-rule="evenodd" /></svg>
            </div>
          </li>
        </ul>
      </div>

    </div>
  </div>
</Layout>