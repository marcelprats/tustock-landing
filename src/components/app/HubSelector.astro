---
import Layout from '~/layouts/PageLayout.astro';

// 1. OBTENER USUARIO
const session = Astro.cookies.get('session');
const userId = session?.value;
const db = Astro.locals.runtime?.env?.DB;

let userStores = [];
let userName = "Usuario";

// 2. CONSULTA ACTUALIZADA (Traemos 't.status')
if (userId && db) {
  try {
    const userRes = await db.prepare("SELECT full_name FROM users WHERE id = ?").bind(userId).first();
    if (userRes) userName = userRes.full_name;

    const storesRes = await db.prepare(`
      SELECT t.name, t.slug, t.status, m.role 
      FROM memberships m
      JOIN tenants t ON m.tenant_id = t.id
      WHERE m.user_id = ?
    `).bind(userId).all();
    
    // Formatear datos + L√≥gica visual
    if (storesRes.results) {
      userStores = storesRes.results.map(s => {
        const isPending = s.status === 'PENDING';
        return {
          ...s, 
          logo: s.name.charAt(0).toUpperCase(),
          isPending: isPending,
          // Si est√° pendiente, el enlace es '#' (no hace nada)
          url: isPending || !s.status 
               ? '#' 
               : (import.meta.env.PROD ? `https://${s.slug}.tustock.app` : `/?tenant=${s.slug}`)
        };
      });
    }

  } catch (e) {
    console.error("Error cargando Hub:", e);
  }
}

const metadata = { title: 'Mis Tiendas' };
---

<Layout metadata={metadata}>
  <section class="min-h-screen bg-gray-50 dark:bg-slate-900 flex flex-col items-center justify-center p-4">
    
    <div class="max-w-md w-full animate-fade-in-up">
      <div class="text-center mb-10">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">Hola, {userName} üëã</h1>
        <p class="text-gray-500">Selecciona tu negocio:</p>
      </div>

      <div class="space-y-4">
        {userStores.length > 0 ? userStores.map((store) => (
          <a 
            href={store.url} 
            class={`block p-6 rounded-2xl shadow-sm border transition-all group relative overflow-hidden
              ${store.isPending 
                ? 'bg-yellow-50 dark:bg-yellow-900/10 border-yellow-200 cursor-not-allowed opacity-90' 
                : 'bg-white dark:bg-slate-800 hover:shadow-xl hover:-translate-y-1 border-gray-200 cursor-pointer'
              }`}
          >
            {/* ETIQUETA AMARILLA SI EST√Å PENDIENTE */}
            {store.isPending && (
              <div class="absolute top-0 right-0 bg-yellow-400 text-yellow-900 text-[10px] font-bold px-3 py-1 rounded-bl-lg z-10">
                EN PROCESO üöß
              </div>
            )}

            <div class="flex items-center justify-between">
              <div class="flex items-center gap-4">
                <div class={`h-12 w-12 rounded-xl flex items-center justify-center font-bold text-xl transition-colors
                  ${store.isPending
                    ? 'bg-yellow-100 text-yellow-600'
                    : 'bg-blue-100 dark:bg-blue-900/30 text-blue-600 dark:text-blue-400 group-hover:bg-blue-600 group-hover:text-white'
                  }`}>
                  {store.logo}
                </div>
                <div>
                  <h3 class="font-bold text-lg text-gray-900 dark:text-white">
                    {store.name}
                  </h3>
                  <div class="flex items-center gap-2">
                    <span class="text-[10px] uppercase tracking-wider font-bold px-2 py-1 bg-gray-100 dark:bg-slate-700 rounded-full text-gray-500 dark:text-gray-300">
                      {store.role}
                    </span>
                    {store.isPending && <span class="text-xs text-yellow-600 font-medium">Provisionando...</span>}
                  </div>
                </div>
              </div>
              
              {!store.isPending && (
                <svg class="w-5 h-5 text-gray-300 group-hover:text-blue-500 transform group-hover:translate-x-1 transition-all" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
              )}
            </div>
          </a>
        )) : (
          <div class="text-center p-6 bg-white dark:bg-slate-800 rounded-xl border border-dashed border-gray-300 dark:border-slate-700">
             <p class="text-gray-500 mb-2">No tienes tiendas asignadas.</p>
          </div>
        )}
        
        {/* BOT√ìN CREAR NUEVA TIENDA */}
        <a href="/new-store" class="group block border-2 border-dashed border-blue-300 dark:border-blue-900/50 p-4 rounded-2xl text-center text-blue-600 dark:text-blue-400 hover:border-blue-500 hover:bg-blue-50 dark:hover:bg-blue-900/20 transition cursor-pointer">
          <span class="flex items-center justify-center gap-2 font-bold">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" /></svg>
            Registrar nuevo negocio
          </span>
        </a>
      </div>

      <div class="mt-12 text-center border-t border-gray-200 dark:border-slate-800 pt-6">
        <a href="/api/logout" class="text-sm text-red-500 font-medium hover:text-red-600 flex items-center justify-center gap-2 transition">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" /></svg>
          Cerrar sesi√≥n
        </a>
      </div>
    </div>
  </section>
</Layout>
