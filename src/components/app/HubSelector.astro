---
import Layout from '~/layouts/PageLayout.astro';

// 1. OBTENER SESIÃ“N Y DB
const session = Astro.cookies.get('session');
const userId = session?.value;
const db = Astro.locals.runtime?.env?.DB;

let userStores = [];
let userName = "Usuario";

// 2. CONSULTA REAL
if (userId && db) {
  try {
    // Obtenemos nombre del usuario y sus tiendas
    // Primero el nombre
    const userRes = await db.prepare("SELECT full_name FROM users WHERE id = ?").bind(userId).first();
    if (userRes) userName = userRes.full_name;

    // Segundo las tiendas (JOIN users -> tenants)
    const storesRes = await db.prepare(`
      SELECT t.name, t.slug, u.role 
      FROM users u
      JOIN tenants t ON u.tenant_id = t.id
      WHERE u.id = ?
    `).bind(userId).all();
    
    userStores = storesRes.results.map(s => ({...s, logo: s.name.charAt(0).toUpperCase()}));

  } catch (e) {
    console.error("Error DB Hub:", e);
  }
}

const metadata = { title: 'Mis Tiendas' };
---

