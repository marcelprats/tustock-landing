    <div class="max-w-md w-full animate-fade-in-up">
      <div class="text-center mb-10">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">Hola, {userName} ðŸ‘‹</h1>
        <p class="text-gray-500">Selecciona tu negocio:</p>
      </div>

      <div class="space-y-4">
        {userStores.length > 0 ? userStores.map((store) => (
