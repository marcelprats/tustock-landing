---
// src/components/app/dashboard/ServerStatus.astro

// AHORA RECIBIMOS EL ESTADO CALCULADO DESDE FUERA
const { licenseKey, isOnline } = Astro.props; 

const statusColor = isOnline ? 'bg-green-500' : 'bg-red-500';
const statusText = isOnline ? 'CONECTADO' : 'DESCONECTADO'; // Texto m치s claro
const containerBorder = isOnline ? 'border-green-200 dark:border-green-900' : 'border-red-200 dark:border-red-900';
---

<div class={`bg-white dark:bg-slate-800 rounded-2xl p-6 shadow-sm border ${containerBorder} transition-all`}>
  <div class="flex items-center justify-between mb-6">
    <h3 class="font-bold text-lg text-gray-900 dark:text-white flex items-center gap-2">
      <svg class="w-5 h-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01" /></svg>
      Servidor Local
    </h3>
    
    <div class="flex items-center gap-2">
      <span class={`flex items-center gap-1.5 px-2.5 py-0.5 rounded-full text-xs font-bold text-white ${statusColor}`}>
        <span class="w-1.5 h-1.5 rounded-full bg-white animate-pulse"></span>
        {statusText}
      </span>
    </div>
  </div>

  <div class="space-y-5">
    
    {/* Mensaje si est치 desconectado */}
    {!isOnline && (
      <div class="bg-gray-50 dark:bg-slate-900/50 p-4 rounded-xl text-sm border border-gray-100 dark:border-slate-700">
        <p class="font-bold text-gray-700 dark:text-gray-200 mb-1">游댋 Enlace ca칤do</p>
        <p class="text-gray-500 mb-3 text-xs">
          Tu PC no est치 enviando datos. Aseg칰rate de que el programa est치 abierto.
        </p>
        <a href="/download" class="text-blue-600 underline text-xs font-bold hover:text-blue-500">
            Descargar e Instalar de nuevo
        </a>
      </div>
    )}

    {/* VISUALIZADOR DE LICENCIA */}
    <div>
      <label class="block text-[10px] font-bold text-gray-400 uppercase tracking-wider mb-2">Token de Vinculaci칩n</label>
      <div class="flex group">
        <input 
            type="text" 
            readonly 
            value={licenseKey || 'Cargando...'} 
            class="flex-1 bg-gray-100 dark:bg-slate-950 p-3 rounded-l-lg font-mono text-sm border-y border-l border-gray-200 dark:border-slate-700 text-gray-600 dark:text-gray-300 focus:outline-none truncate"
            id="licenseInput"
        />
        <button 
          onclick="const i = document.getElementById('licenseInput'); i.select(); navigator.clipboard.writeText(i.value); alert('춰Copiado!');"
          class="px-4 bg-gray-200 hover:bg-gray-300 dark:bg-slate-700 dark:hover:bg-slate-600 rounded-r-lg border border-transparent transition text-gray-600 dark:text-gray-200 font-bold text-xs uppercase"
        >
          Copiar
        </button>
      </div>
    </div>
  </div>
</div>