<script is:inline>
  // Esta funci칩n contiene toda la l칩gica de detecci칩n
  function setupScrollSpy() {
    const sections = document.querySelectorAll('.scroll-target');
    const navLinks = document.querySelectorAll('.nav-link');
    
    if (sections.length === 0) return; // Si no hay secciones, no hacemos nada

    let lastActiveId = "";
    let labelTimeout = null;

    function update() {
      const viewportCenter = window.innerHeight / 2;
      let closestId = "";
      let minDistance = Infinity;

      sections.forEach(section => {
        const rect = section.getBoundingClientRect();
        const sectionCenter = rect.top + (rect.height / 2);
        const distance = Math.abs(viewportCenter - sectionCenter);
        if (distance < minDistance) {
          minDistance = distance;
          closestId = section.getAttribute('id');
        }
      });

      if (closestId !== lastActiveId) {
        lastActiveId = closestId;
        
        if (labelTimeout) clearTimeout(labelTimeout);

        navLinks.forEach(link => {
          const indicator = link.querySelector('.indicator');
          const label = link.querySelector('.nav-label');
          const target = link.getAttribute('data-target');

          if (target === closestId) {
            if (indicator) indicator.className = "indicator w-2.5 h-8 rounded-full bg-blue-600 shadow-[0_0_20px_rgba(37,99,235,0.7)]";
            if (label) {
              label.style.opacity = "1";
              label.style.transform = "translateX(0)";
              labelTimeout = setTimeout(() => {
                label.style.opacity = "0";
                label.style.transform = "translateX(-10px)";
              }, 2000);
            }
          } else {
            if (indicator) indicator.className = "indicator w-1.5 h-1.5 rounded-full bg-slate-400/30 dark:bg-slate-500/30";
            if (label) {
              label.style.opacity = "0";
              label.style.transform = "translateX(-10px)";
            }
          }
        });
      }
    }

    // Escuchamos el scroll de forma eficiente
    window.addEventListener('scroll', () => {
        window.requestAnimationFrame(update);
    }, { passive: true });
    
    // Ejecuci칩n inmediata
    update();
  }

  // 游댠 LA CLAVE: Escuchar el evento de navegaci칩n de Astro
  document.addEventListener('astro:page-load', setupScrollSpy);

  // Por si acaso no usas ViewTransitions, tambi칠n lo lanzamos en DOMContentLoaded
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', setupScrollSpy);
  } else {
    setupScrollSpy();
  }
</script>