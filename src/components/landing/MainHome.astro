<script>
  const observerOptions = {
    root: null,
    // 游댠 AJUSTE CLAVE: Detecta el centro de la pantalla mejor
    rootMargin: '-40% 0px -40% 0px', 
    threshold: 0
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const id = entry.target.getAttribute('id');
        
        // 1. RESETEAR TODOS (Gris y peque침os)
        document.querySelectorAll('.nav-link').forEach(link => {
          link.classList.remove('active'); 
          const dot = link.querySelector('div');
          // Si encontramos el puntito, lo ponemos gris
          if (dot) {
             dot.classList.remove('bg-blue-600', 'scale-125');
             dot.classList.add('bg-slate-400/50');
          }
        });
        
        // 2. ACTIVAR EL ACTUAL (Azul y grande)
        const activeLink = document.querySelector(`.nav-link[data-target="${id}"]`);
        if (activeLink) {
          activeLink.classList.add('active');
          const dot = activeLink.querySelector('div');
          // Si encontramos el puntito, lo ponemos azul
          if (dot) {
             dot.classList.remove('bg-slate-400/50');
             dot.classList.add('bg-blue-600', 'scale-125');
          }
        }
      }
    });
  }, observerOptions);

  // Observamos todas las secciones
  document.querySelectorAll('#hero, #features, #fiscalidad, #ai-core, #steps, #pricing, #faq').forEach((section) => {
    observer.observe(section);
  });
</script>