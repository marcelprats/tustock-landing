---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';

const metadata = { title: 'TuStock — Gestión de Inventario' };
---

<Layout metadata={metadata}>
  <Hero2
    tagline="Gestión de Inventario 2.0"
    actions={[
      { variant: 'primary', text: 'Empezar Gratis', href: '/signup' },
      { text: 'Saber más', href: '#features' },
    ]}
  >
    <Fragment slot="title">Controla tu stock con IA</Fragment>
    <Fragment slot="subtitle">TuStock lee tus facturas automáticamente.</Fragment>
  </Hero2>

  <Features
    id="features"
    title="¿Por qué nosotros?"
    items={[{ title: 'IA Real', description: 'Escaneo de facturas.', icon: 'tabler:scan' }]}
  />
</Layout>