
---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import Pricing from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'TuStock — Gestión de Inventario Inteligente',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Hero2
    tagline="Gestión de Inventario 2.0"
    actions={[
      { variant: 'primary', text: 'Descargar Agente Local', href: '#' },
      { text: 'Ver demo', href: '#features' },
    ]}
    image={{ src: 'https://images.unsplash.com/photo-1551434678-e076c223a692?ixlib=rb-4.0.3&auto=format&fit=crop&w=2850&q=80', alt: 'TuStock Dashboard' }}
  >
    <Fragment slot="title">
      Controla tu stock con <br /> la potencia de la <span class="text-accent dark:text-white highlight">Visión Artificial</span>
    </Fragment>
    <Fragment slot="subtitle">
      Olvídate de picar datos. <span class="font-semibold">TuStock</span> lee tus facturas con IA.
    </Fragment>
  </Hero2>

  <Features
    id="features"
    title="¿Por qué TuStock?"
    columns={2}
    items={[
      { title: 'Lectura de Facturas con IA', description: 'Extrae productos y precios automáticamente.', icon: 'tabler:scan' },
      { title: 'Privacidad Híbrida', description: 'Tus datos viven en tu PC, accesibles desde la nube.', icon: 'tabler:lock' },
    ]}
  />

  <Pricing id="pricing" title="Precios" prices={[
    { title: 'Starter', price: '0', period: '/ mes', callToAction: { text: 'Empezar Gratis', href: '/signup' } },
    { title: 'Pro', price: '29', period: '/ mes', hasRibbon: true, ribbonTitle: 'popular', callToAction: { text: 'Prueba Gratis', href: '/signup' } },
  ]} />

  <FAQs title="Preguntas Frecuentes" items={[
    { title: '¿Funciona sin internet?', description: 'Sí, es Local-First.' },
  ]} />
</Layout>