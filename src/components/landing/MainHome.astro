---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Stats from '~/components/widgets/Stats.astro';
import Brands from '~/components/widgets/Brands.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import PricingSection from '~/components/widgets/PricingSection.astro';

const metadata = {
  title: 'TuStock — El ERP Híbrido con IA que se adapta a tu escala',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  
  <Hero2
    tagline="Gestión de Inventario Inteligente"
    actions={[
      { variant: 'primary', text: 'Empezar Gratis', href: '/pricing', icon: 'tabler:arrow-down' },
      { text: 'Ver tecnología', href: '#features' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1586528116311-ad8dd3c8310d?auto=format&fit=crop&w=2000&q=80',
      alt: 'TuStock Dashboard IA',
    }}
  >
    <Fragment slot="title">
      La potencia de la <span class="text-blue-600 dark:text-blue-400 highlight">IA</span> unida a la seguridad <span class="text-accent dark:text-purple-400 highlight">Local</span>
    </Fragment>
    
    <Fragment slot="subtitle">
      El único sistema del mercado que escala desde una pequeña tienda de barrio hasta una multinacional logística sin cambiar de plataforma.
    </Fragment>
  </Hero2>

  <Brands
    title="Plataforma construida sobre gigantes"
    icons={[]} 
    images={[
      { src: 'https://cdn.worldvectorlogo.com/logos/docker.svg', alt: 'Docker' },
      { src: 'https://cdn.worldvectorlogo.com/logos/cloudflare-1.svg', alt: 'Cloudflare' },
      { src: 'https://cdn.worldvectorlogo.com/logos/react-2.svg', alt: 'React' },
      { src: 'https://cdn.worldvectorlogo.com/logos/stripe-4.svg', alt: 'Stripe' },
    ]}
  />

  <div id="features">
    <Features2
      title="¿Por qué TuStock?"
      subtitle="La solución híbrida que lo cambia todo."
      items={[
        {
          title: 'IA en tu bolsillo',
          description: 'Escanea productos y facturas con la cámara del móvil. Nuestra IA reconoce los datos automáticamente.',
          icon: 'tabler:scan',
        },
        {
          title: 'Funciona Offline (Local-First)',
          description: 'Si se cae internet, tu tienda sigue vendiendo. Los datos se sincronizan automáticamente al volver.',
          icon: 'tabler:wifi-off',
        },
        {
          title: 'Multitienda Real',
          description: 'Gestiona N negocios desde un solo panel. Cambia de la ferretería a la cafetería en un clic.',
          icon: 'tabler:building-store',
        },
      ]}
    />
  </div>

  {/* AQUI ESTÁ LA MAGIA: Insertamos el componente reutilizable */}
  <PricingSection id="pricing" />

  <Stats
    stats={[
      { title: 'Peticiones API procesadas', amount: '+1M' },
      { title: 'Nodos Locales Activos', amount: '+500' },
      { title: 'Tiempo de respuesta (Local)', amount: '<10ms' },
    ]}
  />

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Empezar ahora',
        href: '/register',
        icon: 'tabler:rocket',
      },
    ]}
  >
    <Fragment slot="title">
      ¿Preparado para escalar?
    </Fragment>
    <Fragment slot="subtitle">
      Tanto si vendes tornillos en el barrio como si distribuyes palets en Europa, TuStock es tu motor.
    </Fragment>
  </CallToAction>
</Layout>
