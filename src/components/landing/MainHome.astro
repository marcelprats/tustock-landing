---
import Hero from '~/components/widgets/Hero.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import PricingSection from '~/components/widgets/PricingSection.astro';
import Stats from '~/components/widgets/Stats.astro';
import Brands from '~/components/widgets/Brands.astro';

const { shopCount, userCount } = Astro.props;

const navItems = [
  { text: 'Inicio', target: 'hero' },
  { text: 'Rendimiento', target: 'features' },
  { text: 'Inteligencia', target: 'ai-core' },
  { text: 'Cumplimiento', target: 'fiscalidad' },
  { text: 'Migración', target: 'steps' },
  { text: 'Inversión', target: 'pricing' },
  { text: 'Soporte', target: 'faq' },
];
---

<div class="relative w-full bg-white dark:bg-slate-950">

  <aside class="hidden xl:flex fixed left-6 top-1/2 -translate-y-1/2 z-50 flex-col gap-6 pointer-events-none">
    <nav class="pointer-events-auto flex flex-col gap-5 p-4 bg-white/40 dark:bg-slate-900/40 backdrop-blur-md rounded-full border border-gray-200/50 dark:border-white/10 shadow-2xl transition-all duration-300">
      {navItems.map(({ text, target }) => (
        <a href={`#${target}`} class="nav-link group relative flex items-center justify-center w-4 h-full" data-target={target}>
          <span class="nav-label absolute left-12 opacity-0 -translate-x-4 transition-all duration-500 bg-slate-900 text-slate-50 dark:bg-slate-50 dark:text-slate-900 text-[10px] font-bold uppercase tracking-widest px-3 py-1.5 rounded-md shadow-xl pointer-events-none whitespace-nowrap z-50 group-hover:opacity-100 group-hover:translate-x-0 group-hover:pointer-events-auto">
            {text}
          </span>
          <div class="indicator w-1.5 h-1.5 rounded-full bg-slate-400/40 dark:bg-slate-500/40 transition-all duration-500 ease-[cubic-bezier(0.34,1.56,0.64,1)] group-hover:bg-blue-400"></div>
        </a>
      ))}
    </nav>
  </aside>
  
  <div class="flex-1 w-full">
    
    <div id="hero" class="scroll-target min-h-screen flex items-center justify-center text-center">
      <div class="w-full">
        <Hero
          actions={[
            { variant: 'primary', text: 'Descargar Software', href: '/download', icon: 'tabler:download', class: 'sm:order-2' },
            { text: 'Acceso Cloud', href: '/register', icon: 'tabler:login', class: 'sm:order-3' },
            { text: 'Fiscalidad 2026', href: '#fiscalidad', icon: 'tabler:receipt-tax', class: 'sm:order-1 border-dashed opacity-80 hover:opacity-100' },
          ]}
          image={{ src: 'https://images.unsplash.com/photo-1460925895917-afdab827c52f?auto=format&fit=crop&w=2000&q=80', alt: 'TuStock Analytics' }}
        >
          <fragment slot="title">
            <span class="text-5xl md:text-7xl font-extrabold tracking-tighter leading-[1.1] block mx-auto max-w-4xl opacity-100 translate-y-0 transition-none">
              El sistema operativo <br/> 
              <span class="text-blue-600 dark:text-blue-400">para el retail moderno.</span>
            </span>
          </fragment>

          <fragment slot="subtitle">
              <p class="max-w-2xl mx-auto text-center opacity-100 transition-none">
                Gestión de inventario de alto rendimiento que fusiona la potencia del <b>procesamiento local</b> con la ubicuidad de la nube.
              </p>
          </fragment>
        </Hero>
      </div>
    </div>

    <div class="py-16 border-y border-gray-100 dark:border-slate-800 bg-slate-50/50 dark:bg-slate-900/30">
      <Stats stats={[
        { title: 'Tiendas registradas', amount: shopCount },
        { title: 'Usuarios activos', amount: userCount },
        { title: 'Trazabilidad Fiscal', amount: '100%' },
        { title: 'Latencia Local', amount: '0ms' }
      ]} />
    </div>

    <div id="features" class="scroll-target py-24">
      <Features3
        title="Software de grado industrial."
        subtitle="Diseñado para trabajar a la velocidad de tu negocio, no de tu conexión."
        tagline="Rendimiento"
        columns={3}
        items={[
          { title: 'Local-First', description: 'Cero esperas. Tu base de datos vive en tu PC.', icon: 'tabler:cpu' },
          { title: 'Sincronización Cloud', description: 'Respaldo automático y acceso remoto total.', icon: 'tabler:refresh' },
          { title: 'TPV Nativo', description: 'Compatible con todo tu hardware actual.', icon: 'tabler:device-imac' },
          { title: 'Seguridad AES-256', description: 'Cifrado local de extremo a extremo.', icon: 'tabler:shield-lock' },
          { title: 'Multi-Almacén', description: 'Control centralizado de todas tus sedes.', icon: 'tabler:building-store' },
          { title: 'Modo Offline', description: 'Sigue vendiendo aunque se caiga el mundo.', icon: 'tabler:wifi-off' }
        ]}
      />
    </div>

    <div id="ai-core" class="py-24 bg-slate-50 dark:bg-slate-900 scroll-target transition-colors duration-500">
        <Content
          isReversed
          tagline="Inteligencia Artificial"
          title="Tu inventario ahora piensa por ti."
          items={[
            { title: 'Mapeo de Facturas', description: 'La IA lee tus albaranes y carga el stock sola.' },
            { title: 'Predicción de Demanda', description: 'Anticípate a las roturas de stock antes de que ocurran.' },
            { title: 'Consultas Naturales', description: 'Habla con tus datos como si fueras un analista.' }
          ]}
          image={{ src: 'https://images.unsplash.com/photo-1639322537228-f710d846310a?auto=format&fit=crop&w=800&q=80', alt: 'AI' }}
        />
    </div>

    <div id="fiscalidad" class="py-24 scroll-target">
      <Content
        tagline="Legal 2026"
        title="Tranquilidad total con Hacienda"
        items={[
          { title: 'VeriFactu Ready', description: 'Cumplimiento estricto de la Ley Antifraude 11/2021.' },
          { title: 'Factura Electrónica', description: 'Generación de ficheros Facturae para B2B.' },
          { title: 'Libros de IVA', description: 'Exportación directa para tu gestoría en segundos.' }
        ]}
        image={{ src: 'https://images.unsplash.com/photo-1589829545856-d10d557cf95f?auto=format&fit=crop&w=800&q=80', alt: 'Legal' }}
      />
    </div>

    <div id="steps" class="py-24 bg-slate-50 dark:bg-slate-900 scroll-target">
      <Steps
        title="Comienza hoy mismo"
        items={[
          { title: '1. Exporta', description: 'Saca un Excel de tu sistema antiguo.', icon: 'tabler:file-download' },
          { title: '2. Importa con IA', description: 'Nuestra IA organiza tu catálogo sola.', icon: 'tabler:wand' },
          { title: '3. Vende', description: 'Instala la App y empieza a facturar.', icon: 'tabler:rocket' }
        ]}
      />
    </div>

    <div id="pricing" class="py-24 scroll-target">
      <PricingSection
        title="Precios claros"
        prices={[
          { title: 'Starter', price: '0', subtitle: 'Gratis para siempre', items: [{ description: 'Hasta 300 productos' }] },
          { title: 'Pro', price: 29, subtitle: 'Para negocios reales', hasRibbon: true, items: [{ description: 'App Offline + IA' }] },
          { title: 'Enterprise', price: '99', subtitle: 'Multi-tienda', items: [{ description: 'Soporte 24/7' }] },
        ]}
      />
    </div>

    <div id="faq" class="py-24 bg-slate-50 dark:bg-slate-900 scroll-target">
      <FAQs
        title="Dudas frecuentes"
        items={[
          { title: '¿Funciona sin internet?', description: 'Sí, es el corazón de TuStock. La App local no necesita red para vender.' },
          { title: '¿Es legal?', description: 'Cumplimos al 100% con VeriFactu y la Ley Crea y Crece 2026.' }
        ]}
      />
    </div>

    <CallToAction
      actions={[{ variant: 'primary', text: 'Probar Gratis', href: '/register', icon: 'tabler:rocket' }]}
    >
      <fragment slot="title">Toma el control de tu negocio</fragment>
    </CallToAction>

  </div>
</div>

<style is:global>
  html { scroll-behavior: smooth; }
  
  /* ELIMINAR RETARDOS DEL HERO */
  #hero [data-aw-reveal] {
    animation: none !important;
    opacity: 1 !important;
    transform: none !important;
    transition: none !important;
  }

  .indicator {
      will-change: height, transform, background-color;
      transition: height 0.6s cubic-bezier(0.34, 1.56, 0.64, 1), background-color 0.4s ease, box-shadow 0.4s ease;
  }
</style>

<script is:inline>
  function setupScrollSpy() {
    const sections = document.querySelectorAll('.scroll-target');
    const navLinks = document.querySelectorAll('.nav-link');
    if (sections.length === 0) return;
    let lastActiveId = "";
    let labelTimeout = null;

    function update() {
      const viewportCenter = window.innerHeight / 2;
      let closestId = "";
      let minDistance = Infinity;
      sections.forEach(section => {
        const rect = section.getBoundingClientRect();
        const sectionCenter = rect.top + (rect.height / 2);
        const distance = Math.abs(viewportCenter - sectionCenter);
        if (distance < minDistance) { minDistance = distance; closestId = section.getAttribute('id'); }
      });
      if (closestId !== lastActiveId) {
        lastActiveId = closestId;
        if (labelTimeout) clearTimeout(labelTimeout);
        navLinks.forEach(link => {
          const indicator = link.querySelector('.indicator');
          const label = link.querySelector('.nav-label');
          const target = link.getAttribute('data-target');
          if (target === closestId) {
            if (indicator) indicator.className = "indicator w-2.5 h-8 rounded-full bg-blue-600 shadow-[0_0_20px_rgba(37,99,235,0.7)]";
            if (label) {
              label.style.opacity = "1"; label.style.transform = "translateX(0)";
              labelTimeout = setTimeout(() => { if (!link.matches(':hover')) { label.style.opacity = ""; label.style.transform = ""; } }, 2000);
            }
          } else {
            if (indicator) indicator.className = "indicator w-1.5 h-1.5 rounded-full bg-slate-400/40 dark:bg-slate-500/40";
            if (label && !link.matches(':hover')) { label.style.opacity = ""; label.style.transform = ""; }
          }
        });
      }
    }
    window.addEventListener('scroll', () => { window.requestAnimationFrame(update); }, { passive: true });
    update();
  }
  document.addEventListener('astro:page-load', setupScrollSpy);
  if (document.readyState !== 'loading') setupScrollSpy();
</script>