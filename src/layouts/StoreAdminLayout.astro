---
import CustomStyles from "~/components/CustomStyles.astro";
import Favicons from "~/components/Favicons.astro";
import Metadata from "~/components/common/Metadata.astro";
import ApplyColorMode from "~/components/common/ApplyColorMode.astro";
import BasicScripts from "~/components/common/BasicScripts.astro";

const { tenant, metadata = {} } = Astro.props;
const { currentShop } = Astro.locals;
const shopName = currentShop?.name || tenant;
---

<!doctype html>
<html lang="es" class="motion-safe:scroll-smooth" dir="ltr">
  <head>
    <Metadata {...metadata} />
    <CustomStyles />
    <Favicons />
    <ApplyColorMode />
  </head>

  <body class="antialiased text-gray-900 bg-gray-50 dark:bg-slate-900 dark:text-slate-300 tracking-tight h-screen flex flex-col overflow-hidden">
    
    {/* --- NAVBAR SUPERIOR --- */}
    <nav class="h-16 bg-white dark:bg-slate-950 border-b border-gray-200 dark:border-slate-800 flex items-center justify-between px-6 z-20 shrink-0">
      
      {/* IZQUIERDA: Nombre de la tienda */}
      <div class="flex items-center gap-3">
        <div class="w-8 h-8 rounded bg-blue-600 flex items-center justify-center text-white font-bold text-lg">
           {shopName.charAt(0).toUpperCase()}
        </div>
        <div class="leading-tight">
           <h1 class="font-bold text-lg text-gray-900 dark:text-white">{shopName}</h1>
           <span class="text-[10px] uppercase font-bold text-gray-400">Panel de Gestión</span>
        </div>
      </div>

      {/* DERECHA: Botón Salir */}
      <div class="flex items-center gap-4">
         <a href="/" target="_blank" class="text-sm font-medium text-blue-600 hover:underline">Ver Tienda</a>
         <div class="h-6 w-px bg-gray-200 dark:bg-slate-800"></div>
         <a href="/api/logout" class="text-sm font-bold text-red-500 hover:text-red-600">Salir</a>
      </div>
    </nav>

    {/* --- CONTENIDO PRINCIPAL --- */}
    <main class="flex-1 overflow-y-auto p-6 md:p-10">
        <slot />
    </main>

    <BasicScripts />
  </body>
</html>