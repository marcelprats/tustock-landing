---
import CustomStyles from "~/components/CustomStyles.astro";
import Favicons from "~/components/Favicons.astro";
import Metadata from "~/components/common/Metadata.astro";
import ApplyColorMode from "~/components/common/ApplyColorMode.astro";
import BasicScripts from "~/components/common/BasicScripts.astro";

const { tenant, metadata = {} } = Astro.props;
const { currentShop } = Astro.locals; // El middleware ya nos da el nombre y plan

// Datos simples para la cabecera
const shopName = currentShop?.name || tenant;
const shopPlan = currentShop?.plan || 'FREE';
---

<!doctype html>
<html lang="es" class="motion-safe:scroll-smooth" dir="ltr">
  <head>
    <Metadata {...metadata} />
    <CustomStyles />
    <Favicons />
    <ApplyColorMode />
  </head>

  <body class="antialiased text-gray-900 bg-gray-50 dark:bg-slate-900 dark:text-slate-300 tracking-tight h-screen flex flex-col overflow-hidden">
    
    {/* --- 1. BARRA SUPERIOR (NAVBAR) --- */}
    <nav class="h-16 bg-white dark:bg-slate-950 border-b border-gray-200 dark:border-slate-800 flex items-center justify-between px-6 flex-shrink-0 z-20">
      
      {/* IZQUIERDA: Identidad de la Tienda (LIMPIA) */}
      <div class="flex items-center gap-3">
        {/* Logo/Icono simple con la inicial */}
        <div class="w-8 h-8 rounded bg-blue-600 flex items-center justify-center text-white font-bold text-lg shadow-sm">
           {shopName.charAt(0).toUpperCase()}
        </div>
        <div>
           <h1 class="font-bold text-lg leading-tight">{shopName}</h1>
           {/* Badge de Plan discreto (opcional, si no lo quieres borra esta línea) */}
           <span class="text-[10px] font-bold bg-gray-100 dark:bg-slate-800 text-gray-500 px-1.5 py-0.5 rounded uppercase tracking-wider">
             Panel de Gestión
           </span>
        </div>
      </div>

      {/* DERECHA: Salida */}
      <div class="flex items-center gap-4">
         <a href="/" target="_blank" class="hidden md:flex items-center gap-2 text-sm text-gray-500 hover:text-blue-600 transition">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" /></svg>
            Ver Tienda
         </a>
         <div class="h-6 w-px bg-gray-200 dark:bg-slate-800 hidden md:block"></div>
         <a href="/api/logout" class="text-sm font-bold text-red-500 hover:text-red-600">
            Cerrar Sesión
         </a>
      </div>
    </nav>

    {/* --- 2. CUERPO PRINCIPAL (Con Sidebar Integrado) --- */}
    <div class="flex flex-1 overflow-hidden">
        
        {/* SIDEBAR (Menú lateral sencillo) */}
        <aside class="w-64 bg-white dark:bg-slate-950 border-r border-gray-200 dark:border-slate-800 hidden md:flex flex-col">
            <div class="p-4 space-y-1">
                <a href="#" class="flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-md bg-blue-50 text-blue-700 dark:bg-blue-900/20 dark:text-blue-400">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" /></svg>
                    Resumen
                </a>
                <a href="#" class="flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-md text-gray-600 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-slate-800 hover:text-gray-900 dark:hover:text-white transition">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" /></svg>
                    Inventario
                </a>
                <a href="/settings" class="flex items-center gap-3 px-3 py-2 text-sm font-medium rounded-md text-gray-600 dark:text-gray-400 hover:bg-gray-50 dark:hover:bg-slate-800 hover:text-gray-900 dark:hover:text-white transition">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                    Configuración
                </a>
            </div>
            
            <div class="mt-auto p-4 border-t border-gray-100 dark:border-slate-800">
                <p class="text-xs text-gray-400 text-center">Soporte Técnico</p>
            </div>
        </aside>

        {/* CONTENIDO DEL DASHBOARD (SLOT) */}
        <main class="flex-1 overflow-y-auto p-6 md:p-8 bg-slate-50 dark:bg-slate-900">
             <slot />
        </main>

    </div>

    <BasicScripts />
  </body>
</html>