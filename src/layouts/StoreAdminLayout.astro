---
import CustomStyles from "~/components/CustomStyles.astro";
import Favicons from "~/components/Favicons.astro";
import Metadata from "~/components/common/Metadata.astro";
import ApplyColorMode from "~/components/common/ApplyColorMode.astro";
import BasicScripts from "~/components/common/BasicScripts.astro";

const { tenant, metadata = {} } = Astro.props;
const { currentShop } = Astro.locals;
const shopName = currentShop?.name || tenant;
---

<!doctype html>
<html lang="es" class="motion-safe:scroll-smooth" dir="ltr">
  <head>
    <Metadata {...metadata} />
    <CustomStyles />
    <Favicons />
    <ApplyColorMode />
  </head>

  <body class="antialiased text-default bg-page tracking-tight h-screen flex flex-col overflow-hidden">
    
    <nav class="h-16 border-b border-gray-200 dark:border-slate-800 bg-white/80 dark:bg-slate-900/80 backdrop-blur-md flex items-center justify-between px-6 z-20 shrink-0">
      
      <div class="flex items-center gap-3">
        <div class="w-8 h-8 rounded bg-blue-600 flex items-center justify-center text-white font-bold text-lg shadow-sm">
           {shopName ? shopName.charAt(0).toUpperCase() : 'T'}
        </div>
        <div class="leading-tight">
           <h1 class="font-bold text-lg truncate max-w-[150px]">{shopName}</h1>
           <span class="text-[10px] uppercase font-bold text-gray-500">Panel de Gesti√≥n</span>
        </div>
      </div>

      <div class="flex items-center gap-4">
         <a href="/" target="_blank" class="text-sm font-medium hover:text-blue-600 transition hidden sm:block">Ver Tienda</a>
         <div class="h-6 w-px bg-gray-200 dark:bg-slate-800 hidden sm:block"></div>
         <a href="/api/logout" class="text-sm font-bold text-red-500 hover:text-red-600 transition">Salir</a>
      </div>
    </nav>

    <main class="flex-1 overflow-y-auto p-4 md:p-8 bg-gray-50 dark:bg-slate-950/30">
        <div class="max-w-6xl mx-auto animate-fade-in">
            <slot />
        </div>
    </main>

    <BasicScripts />
  </body>
</html>