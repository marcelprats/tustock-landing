---
import Layout from '~/layouts/PageLayout.astro';

// 1. SEGURIDAD: Solo usuarios logueados
const session = Astro.cookies.get('session');
if (!session || !session.value) {
  return Astro.redirect('/login?return_to=/settings');
}

const userId = session.value;
const db = Astro.locals.runtime?.env?.DB;

// 2. DETECTAR CONTEXTO (Subdominio o Principal)
const url = new URL(Astro.request.url);
const hostname = url.hostname;
let tenantSlug = '';

if (import.meta.env.PROD) {
  if (hostname !== 'tustock.app' && hostname !== 'www.tustock.app') {
    tenantSlug = hostname.split('.')[0];
  }
} else {
  tenantSlug = url.searchParams.get('tenant') || '';
}

// 3. OBTENER DATOS DE LA TIENDA
let shopData = null;
let userShops = [];

if (db) {
  // Si estamos en un subdominio, cargamos esa tienda espec铆fica
  if (tenantSlug) {
    shopData = await db.prepare(`
      SELECT t.* FROM tenants t
      JOIN memberships m ON t.id = m.tenant_id
      WHERE t.slug = ? AND m.user_id = ?
    `).bind(tenantSlug, userId).first();
  }
  
  // Siempre cargamos la lista de tiendas del usuario por si quiere cambiar
  const result = await db.prepare(`
    SELECT t.name, t.slug, m.role FROM tenants t
    JOIN memberships m ON t.id = m.tenant_id
    WHERE m.user_id = ?
  `).bind(userId).all();
  userShops = result.results;
}

// Si entras a /settings en la principal sin especificar tienda, mostramos selector
const isSelecting = !tenantSlug && userShops.length > 0;
const metadata = { title: 'Ajustes de Cuenta | TuStock' };
---

<Layout metadata={metadata}>
  <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-4xl">
    <div class="mb-10 md:mx-auto text-center md:mb-12 max-w-3xl">
      <h1 class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading">
        Configuraci贸n
      </h1>
      <p class="text-xl text-muted dark:text-slate-400">
        Gestiona tu perfil y las preferencias de tus negocios vinculados.
      </p>
    </div>

    <div class="grid gap-8">
      {/* SECCIN A: PERFIL DE USUARIO (Dato compartido) */}
      <div class="bg-white dark:bg-slate-900 shadow-md rounded-lg p-6 border border-gray-200 dark:border-slate-700">
        <h2 class="text-2xl font-bold mb-4 flex items-center gap-2">
          <span class="text-blue-600"></span> Perfil de Usuario
        </h2>
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">ID de Usuario (Sesi贸n)</label>
            <input type="text" disabled value={userId} class="mt-1 block w-full px-3 py-2 bg-gray-100 border border-gray-300 rounded-md shadow-sm text-gray-500 sm:text-sm" />
          </div>
          <button class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition">
            Cambiar Contrase帽a
          </button>
        </div>
      </div>

      {/* SECCIN B: AJUSTES DE TIENDA */}
      <div class="bg-white dark:bg-slate-900 shadow-md rounded-lg p-6 border border-gray-200 dark:border-slate-700">
        <h2 class="text-2xl font-bold mb-4 flex items-center gap-2">
          <span class="text-blue-600"></span> Gesti贸n de Tienda
        </h2>

        {tenantSlug && shopData ? (
          <form class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Nombre de la Tienda</label>
                <input type="text" value={shopData.name} class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 dark:bg-slate-800" />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">URL del Panel</label>
                <div class="mt-1 flex rounded-md shadow-sm">
                  <span class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500 text-sm">https://</span>
                  <input type="text" disabled value={shopData.slug} class="flex-1 block w-full px-3 py-2 border border-gray-300 rounded-none rounded-r-md bg-gray-100 text-gray-500 sm:text-sm" />
                </div>
              </div>
            </div>
            
            <div class="p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg border border-blue-100 dark:border-blue-800">
              <p class="text-sm text-blue-800 dark:text-blue-300 italic font-medium">
                Suscripci贸n actual: <b>{shopData.plan_type}</b>
              </p>
            </div>

            <button type="submit" class="w-full md:w-auto bg-green-600 hover:bg-green-700 text-white font-bold py-2.5 px-6 rounded transition shadow-lg shadow-green-500/20">
              Guardar cambios de la tienda
            </button>
          </form>
        ) : (
          <div class="text-center py-8">
            <p class="text-gray-500 mb-6">Selecciona una tienda para configurar:</p>
            <div class="flex flex-wrap justify-center gap-4">
              {userShops.map((s) => (
                <a href={`https://${s.slug}.tustock.app/settings`} class="px-4 py-3 bg-slate-100 dark:bg-slate-800 rounded-xl hover:ring-2 hover:ring-blue-500 transition-all border border-slate-200 dark:border-slate-700">
                  <span class="font-bold">{s.name}</span>
                  <p class="text-xs text-gray-400">v铆a {s.slug}.tustock.app</p>
                </a>
              ))}
              <a href="/new-store" class="px-4 py-3 bg-blue-50 dark:bg-blue-900/10 text-blue-600 rounded-xl border border-blue-200 border-dashed hover:bg-blue-100 transition-all">
                + Crear nueva tienda
              </a>
            </div>
          </div>
        )}
      </div>
    </div>
  </section>
</Layout>