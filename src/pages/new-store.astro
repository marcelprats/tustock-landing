---
import Layout from '~/layouts/PageLayout.astro';
import { Icon } from 'astro-icon/components';

// 1. SEGURIDAD: Solo usuarios logueados
const session = Astro.cookies.get('session');
if (!session || !session.value) {
  return Astro.redirect('/login');
}

const metadata = { title: "Registrar Nuevo Negocio - TuStock" };
---

<Layout metadata={metadata}>
  <section class="relative min-h-screen flex flex-col items-center justify-center bg-slate-50 dark:bg-[#0b1120] overflow-hidden p-4">
    
    <div class="absolute inset-0 pointer-events-none z-0">
        <div class="absolute top-[20%] right-[10%] w-[30%] h-[30%] bg-blue-500/10 rounded-full blur-[100px]"></div>
        <div class="absolute bottom-[20%] left-[10%] w-[30%] h-[30%] bg-indigo-500/10 rounded-full blur-[100px]"></div>
    </div>

    <div class="relative w-full max-w-xl z-10">
      
      <a href="/hub" class="inline-flex items-center gap-2 text-sm font-medium text-slate-500 dark:text-slate-400 hover:text-blue-600 dark:hover:text-blue-400 mb-8 transition-colors group">
        <Icon name="tabler:arrow-left" class="w-4 h-4 transition-transform group-hover:-translate-x-1" />
        Volver al Panel de Tiendas
      </a>

      <div class="bg-white/80 dark:bg-slate-900/50 backdrop-blur-xl p-8 md:p-12 rounded-[2.5rem] shadow-2xl border border-white dark:border-slate-800">
        
        <div class="flex items-center justify-center w-16 h-16 bg-blue-600 rounded-2xl shadow-lg shadow-blue-500/30 mb-8 mx-auto">
            <Icon name="tabler:building-store" class="w-8 h-8 text-white" />
        </div>

        <div class="text-center mb-10">
          <h1 class="text-3xl font-bold text-slate-900 dark:text-white mb-3">Nueva Unidad de Negocio</h1>
          <p class="text-slate-500 dark:text-slate-400">Define el nombre y la dirección web de tu nueva tienda.</p>
        </div>

        <form id="new-store-form" class="space-y-8">
          
          <div class="space-y-2">
            <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 ml-1">Nombre Comercial</label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              required 
              placeholder="Ej: Frutería Paco II"
              class="w-full px-5 py-4 bg-slate-50 dark:bg-slate-950/50 border border-slate-200 dark:border-slate-800 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500/50 focus:border-blue-500 transition-all text-slate-900 dark:text-white placeholder:text-slate-400"
            />
          </div>

          <div class="space-y-2">
            <label class="block text-sm font-bold text-slate-700 dark:text-slate-300 ml-1">Dirección Web (Subdominio)</label>
            <div class="relative flex items-center">
              <input 
                type="text" 
                id="subdomain" 
                name="subdomain" 
                required 
                placeholder="frutería-paco"
                class="w-full pl-5 pr-32 py-4 bg-slate-50 dark:bg-slate-950/50 border border-slate-200 dark:border-slate-800 rounded-2xl focus:outline-none focus:ring-2 focus:ring-blue-500/50 focus:border-blue-500 transition-all text-slate-900 dark:text-white placeholder:text-slate-400 lowercase"
              />
              <div class="absolute right-4 px-3 py-1 bg-slate-200 dark:bg-slate-800 rounded-lg text-slate-500 dark:text-slate-400 text-xs font-bold border border-slate-300 dark:border-slate-700">
                .tustock.app
              </div>
            </div>
            <p class="text-[10px] text-slate-500 dark:text-slate-500 ml-1 italic">
              Solo letras minúsculas, números y guiones.
            </p>
          </div>

          <div id="error-message" class="hidden animate-shake">
            <div class="flex items-center gap-3 p-4 bg-red-50 dark:bg-red-900/20 text-red-600 dark:text-red-400 text-sm rounded-2xl border border-red-100 dark:border-red-900/30">
                <Icon name="tabler:alert-circle" class="w-5 h-5 shrink-0" />
                <span id="error-text"></span>
            </div>
          </div>

          <div class="flex flex-col sm:flex-row gap-4 pt-4">
            <button 
              type="submit" 
              id="submit-btn"
              class="flex-1 order-1 sm:order-2 py-4 px-6 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-2xl shadow-xl shadow-blue-500/20 hover:shadow-blue-500/40 hover:-translate-y-1 active:scale-95 transition-all flex items-center justify-center gap-2"
            >
              <Icon name="tabler:circle-plus" class="w-5 h-5" id="btn-icon" />
              <span id="btn-text">Crear Negocio</span>
            </button>
          </div>

        </form>

      </div>

      <p class="text-center mt-8 text-slate-500 dark:text-slate-500 text-xs">
        Se activará automáticamente el plan <b>Starter (Gratis)</b> para este negocio.<br/>
        Podrás subir al plan Profesional en cualquier momento desde el panel.
      </p>
    </div>
  </section>
</Layout>

<style>
  /* Animación de error */
  @keyframes shake {
    0%, 100% { transform: translateX(0); }
    25% { transform: translateX(-5px); }
    75% { transform: translateX(5px); }
  }
  .animate-shake { animation: shake 0.3s ease-in-out; }
</style>

<script is:inline>
  document.addEventListener('astro:page-load', () => {
    const form = document.getElementById('new-store-form');
    const nameInput = document.getElementById('name');
    const slugInput = document.getElementById('subdomain');
    const errorContainer = document.getElementById('error-message');
    const errorText = document.getElementById('error-text');
    const btn = document.getElementById('submit-btn');
    const btnText = document.getElementById('btn-text');
    const btnIcon = document.getElementById('btn-icon');

    // 1. GENERADOR DE SLUG (Lógica automática)
    if(nameInput && slugInput) {
        nameInput.addEventListener('input', (e) => {
          if (!slugInput.dataset.touched) {
            const val = e.target.value; 
            slugInput.value = val
                .toLowerCase()
                .normalize("NFD").replace(/[\u0300-\u036f]/g, "") // Quitar tildes
                .replace(/[^a-z0-9]/g, '-') // Solo letras y numeros
                .replace(/-+/g, '-') // Quitar guiones dobles
                .replace(/^-|-$/g, ''); // Quitar guiones al inicio o final
          }
        });
        slugInput.addEventListener('keydown', () => {
          slugInput.dataset.touched = 'true';
        });
    }

    // 2. ENVÍO DE FORMULARIO
    if (form) {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        // Reset UI
        errorContainer.classList.add('hidden');
        btn.disabled = true;
        btnText.innerText = 'Configurando Entorno...';
        btnIcon.classList.add('animate-spin');
        btnIcon.setAttribute('name', 'tabler:loader-quarter');

        const formData = new FormData(form);
        const data = Object.fromEntries(formData);

        try {
          const res = await fetch('/api/create-tenant', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data),
          });

          const result = await res.json();

          if (result.success) {
              window.location.href = result.redirectUrl || '/hub';
          } else {
              throw new Error(result.error || "No se pudo crear el negocio");
          }

        } catch (err) {
          errorText.innerText = err.message;
          errorContainer.classList.remove('hidden');
          
          // Revertir botón
          btn.disabled = false;
          btnText.innerText = 'Crear Negocio';
          btnIcon.classList.remove('animate-spin');
          btnIcon.setAttribute('name', 'tabler:circle-plus');
        }
      });
    }
  });
</script>