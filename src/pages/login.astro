---
import Layout from '~/layouts/PageLayout.astro';

const metadata = { title: 'Login' };

// Capturar errores si vuelven de la API (ej: contraseña mal)
const error = Astro.url.searchParams.get('error');
---

<Layout metadata={metadata}>
  <div class="flex items-center justify-center min-h-screen bg-gray-50 dark:bg-slate-900 p-4">
    <div class="w-full max-w-md bg-white dark:bg-slate-800 rounded-xl shadow-lg p-8">
      
      <div class="text-center mb-8">
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Bienvenido de nuevo</h1>
        <p class="text-sm text-gray-500 dark:text-gray-400">Introduce tus credenciales para acceder</p>
      </div>

      {error === 'invalid_credentials' && (
        <div class="bg-red-50 text-red-600 text-sm p-3 rounded-lg mb-4 text-center border border-red-100">
          Email o contraseña incorrectos.
        </div>
      )}

      <form action="/api/login" method="POST" class="space-y-5">
        
        <div>
          <label class="block text-sm font-medium mb-1 dark:text-gray-300">Email</label>
          <input 
            type="email" 
            name="email" 
            required 
            class="w-full px-4 py-2 border rounded-lg dark:bg-slate-700 dark:border-slate-600 dark:text-white focus:ring-2 focus:ring-blue-500 outline-none transition-all"
            placeholder="nombre@empresa.com"
          />
        </div>

        <div>
          <div class="flex justify-between items-center mb-1">
            <label class="block text-sm font-medium dark:text-gray-300">Contraseña</label>
            <a href="#" class="text-xs text-blue-600 hover:underline">¿Olvidaste la contraseña?</a>
          </div>
          <input 
            type="password" 
            name="password" 
            required 
            class="w-full px-4 py-2 border rounded-lg dark:bg-slate-700 dark:border-slate-600 dark:text-white focus:ring-2 focus:ring-blue-500 outline-none transition-all"
            placeholder="••••••••"
          />
        </div>

        <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2.5 px-4 rounded-lg transition-colors shadow-lg shadow-blue-500/30">
          Entrar
        </button>

      </form>

      <div class="mt-6 text-center pt-6 border-t border-gray-100 dark:border-slate-700">
        <span class="text-sm text-gray-500">¿No tienes cuenta?</span>
        <a href="/register" class="text-sm font-bold text-blue-600 hover:underline ml-1">Regístrate gratis</a>
      </div>
    </div>
  </div>
</Layout>