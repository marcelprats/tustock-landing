---
import Layout from '~/layouts/Layout.astro';
import Headline from '~/components/ui/Headline.astro';
import { Icon } from 'astro-icon/components';

const metadata = { title: 'Acceder' };
const returnTo = Astro.url.searchParams.get('redirect') || '';
---

<Layout metadata={metadata}>
  <section class="flex items-center justify-center h-screen bg-slate-50 dark:bg-slate-900">
    <div class="w-full max-w-md p-8 bg-white dark:bg-slate-800 rounded-xl shadow-2xl border border-gray-100 dark:border-gray-700">
      
      <div class="text-center mb-8">
        <Headline
          title="Bienvenido"
          subtitle="Entra para gestionar tu negocio."
          tagline="Acceso Seguro"
        />
      </div>

      <form id="loginForm" class="space-y-6">
        
        <input type="hidden" id="return_to" value={returnTo} />

        <div id="errorMessage" class="hidden p-3 rounded-lg bg-red-100 text-red-700 text-sm font-medium text-center"></div>

        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Email</label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <Icon name="tabler:mail" class="w-5 h-5 text-gray-400" />
            </div>
            <input type="email" id="email" required class="block w-full pl-10 pr-3 py-2.5 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-slate-700 dark:border-gray-600 dark:text-white" placeholder="tu@email.com" />
          </div>
        </div>

        <div>
          <label for="password" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Contrase√±a</label>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <Icon name="tabler:lock" class="w-5 h-5 text-gray-400" />
            </div>
            <input type="password" id="password" required class="block w-full pl-10 pr-3 py-2.5 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-slate-700 dark:border-gray-600 dark:text-white" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" />
          </div>
        </div>

        <button id="submitBtn" type="submit" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 transition-all duration-300">
          Acceder
        </button>
      </form>

    </div>
  </section>
</Layout>

<script>
  const form = document.getElementById('loginForm');
  const errorDiv = document.getElementById('errorMessage');
  const btn = document.getElementById('submitBtn') as HTMLButtonElement;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault(); // üõë DETIENE LA RECARGA DE P√ÅGINA

    // Limpiar errores y poner bot√≥n cargando
    if (errorDiv) errorDiv.classList.add('hidden');
    if (btn) { btn.disabled = true; btn.innerText = "Verificando..."; }

    const email = (document.getElementById('email') as HTMLInputElement).value;
    const password = (document.getElementById('password') as HTMLInputElement).value;
    const returnTo = (document.getElementById('return_to') as HTMLInputElement).value;

    try {
      // ENVIAMOS LA PETICI√ìN MANUALMENTE
      const response = await fetch('/api/login', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ email, password, return_to: returnTo })
      });

      const result = await response.json();

      if (response.ok && result.success) {
        // ‚úÖ √âXITO: Redirigimos manualmente
        window.location.href = result.redirect;
      } else {
        // ‚ùå ERROR: Mostramos el mensaje
        throw new Error(result.error || 'Error desconocido');
      }

    } catch (err: any) {
      if (errorDiv) {
        errorDiv.innerText = err.message;
        errorDiv.classList.remove('hidden');
      }
      if (btn) { btn.disabled = false; btn.innerText = "Acceder"; }
    }
  });
</script>