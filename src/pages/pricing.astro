---
import Layout from '~/layouts/PageLayout.astro';
import PricingSection from '~/components/widgets/PricingSection.astro'; // <--- Usamos TU componente nuevo
import FAQs from '~/components/widgets/FAQs.astro'; // Reutilizamos el widget de FAQ de la plantilla
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Precios | TuStock',
};
---

<Layout metadata={metadata}>
  
  {/* Cabecera Simple */}
  <div class="py-16 bg-blue-50 dark:bg-slate-900/50 text-center px-4">
    <h1 class="text-4xl md:text-5xl font-bold mb-4 font-heading">Planes flexibles</h1>
    <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
      Transparencia total. Sin costes ocultos.
    </p>
  </div>

  {/* TU COMPONENTE MAESTRO */}
  <PricingSection />

  {/* FAQs (Usamos el widget de la plantilla pero con texto en español) */}
  <FAQs
    title="Preguntas Frecuentes"
    subtitle="Resolvemos tus dudas."
    columns={1}
    items={[
      {
        title: '¿Hay permanencia?',
        description: 'No. Puedes cancelar o cambiar de plan en cualquier momento.',
      },
      {
        title: '¿Qué pasa si me quedo sin internet?',
        description: 'TuStock es "Local-First". Sigues vendiendo y se sincroniza cuando vuelva la conexión.',
      },
      {
        title: '¿Necesito comprar servidores?',
        description: 'No. En el plan Pequeño Comercio, tu PC es el servidor. En Gran Empresa usamos Docker.',
      },
      {
        title: '¿Puedo probar el plan Pro?',
        description: 'Sí, tienes 14 días gratis sin compromiso.',
      },
    ]}
  />

  <CallToAction
    actions={[{ variant: 'primary', text: 'Crear cuenta gratis', href: '/register' }]}
  >
    <Fragment slot="title">¿Listo para empezar?</Fragment>
    <Fragment slot="subtitle">No necesitas tarjeta de crédito para el plan gratuito.</Fragment>
  </CallToAction>
</Layout>
