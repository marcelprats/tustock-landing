---
import Layout from '~/layouts/PageLayout.astro';

// --- GUEST GUARD: Si ya tienes sesión, al Hub ---
const session = Astro.cookies.get('session');
if (session && session.value) {
  return Astro.redirect('/hub');
}

// Metadatos para SEO
const metadata = {
  title: 'Crea tu cuenta | TuStock.App',
  description: 'Únete a la revolución de la gestión de inventario híbrida con IA.',
};
---

<Layout metadata={metadata}>
  <main class="bg-white dark:bg-dark min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-5xl w-full grid md:grid-cols-2 gap-8 items-center bg-white dark:bg-slate-800 rounded-3xl shadow-2xl overflow-hidden border border-gray-100 dark:border-slate-700">
      
      {/* COLUMNA IZQUIERDA: Marketing/Info */}
      <div class="hidden md:flex flex-col justify-center p-12 bg-blue-600 text-white space-y-8">
        <div>
          <h2 class="text-4xl font-bold mb-4">La potencia de la IA en tu almacén.</h2>
          <p class="text-blue-100 text-lg">
            Únete a cientos de negocios que ya han automatizado su stock.
          </p>
        </div>

        <ul class="space-y-4">
          <li class="flex items-center gap-3">
            <span class="bg-blue-500 p-1 rounded-full">✅</span>
            <span>Escaneo de facturas ilimitado</span>
          </li>
          <li class="flex items-center gap-3">
            <span class="bg-blue-500 p-1 rounded-full">✅</span>
            <span>Subdominio personalizado gratuito</span>
          </li>
          <li class="flex items-center gap-3">
            <span class="bg-blue-500 p-1 rounded-full">✅</span>
            <span>Privacidad de datos híbrida</span>
          </li>
        </ul>

        <div class="pt-8 border-t border-blue-500 text-sm text-blue-200">
          "TuStock ha reducido mis errores de inventario en un 90% en solo un mes." <br/>
          <strong>— Paco, Frutería Paco</strong>
        </div>
      </div>

      {/* COLUMNA DERECHA: Formulario */}
      <div class="p-8 md:p-12">

        {/* SWITCHER TIPO CUENTA */}
        <div class="flex p-1 bg-slate-100 dark:bg-slate-700 rounded-xl mb-8">
            <button type="button" id="tab-owner" class="flex-1 py-2 text-sm font-bold rounded-lg bg-white dark:bg-slate-800 shadow-sm text-blue-600 dark:text-blue-400 transition-all">
                Crear Empresa
            </button>
            <button type="button" id="tab-employee" class="flex-1 py-2 text-sm font-bold rounded-lg text-slate-500 dark:text-slate-400 hover:text-slate-700 dark:hover:text-slate-200 transition-all">
                Unirme a un Equipo
            </button>
        </div>

        <div class="text-center md:text-left mb-6">
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white" id="form-title">Nueva Empresa</h1>
          <p class="text-gray-500 dark:text-gray-400 mt-2" id="form-desc">Crea tu tienda y empieza a vender hoy.</p>
        </div>

        <form id="registro-form" class="space-y-5">
          <input type="hidden" name="type" id="input-type" value="owner" />

          <div class="grid md:grid-cols-2 gap-4">
            <div class="md:col-span-1" id="col-name">
              <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300">Tu Nombre Completo</label>
              <input type="text" name="full_name" required placeholder="Juan Pérez"
                class="w-full px-4 py-3 mt-1 bg-gray-50 dark:bg-slate-900 border border-gray-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none transition dark:text-white" />
            </div>
            <div id="field-shop-name">
              <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300">Nombre del Negocio</label>
              <input type="text" name="name" required placeholder="Mi Tienda S.L."
                class="w-full px-4 py-3 mt-1 bg-gray-50 dark:bg-slate-900 border border-gray-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none transition dark:text-white" />
            </div>
          </div>

          <div>
            <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300">Email Profesional</label>
            <input type="email" name="email" required placeholder="hola@tuempresa.com" 
              class="w-full px-4 py-3 mt-1 bg-gray-50 dark:bg-slate-900 border border-gray-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none transition dark:text-white" />
          </div>

          <div id="field-subdomain">
            <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300">URL de tu Panel</label>
            <div class="flex mt-1">
              <input type="text" name="subdomain" id="subdomain" required placeholder="mi-tienda" 
                class="flex-1 px-4 py-3 bg-gray-50 dark:bg-slate-900 border border-gray-200 dark:border-slate-700 rounded-l-xl focus:ring-2 focus:ring-blue-500 outline-none transition dark:text-white lowercase" />
              <span class="inline-flex items-center px-4 bg-gray-100 dark:bg-slate-700 border border-l-0 border-gray-200 dark:border-slate-700 text-gray-500 dark:text-gray-300 rounded-r-xl font-medium">
                .tustock.app
              </span>
            </div>
          </div>

          <div>
            <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300">Contraseña</label>
            <input type="password" name="password" required placeholder="••••••••" 
              class="w-full px-4 py-3 mt-1 bg-gray-50 dark:bg-slate-900 border border-gray-200 dark:border-slate-700 rounded-xl focus:ring-2 focus:ring-blue-500 outline-none transition dark:text-white" />
          </div>

          <button type="submit" id="btn-submit"
            class="w-full py-4 px-6 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-xl shadow-lg shadow-blue-200 dark:shadow-none transition-all transform hover:-translate-y-1 active:scale-95">
            Crear cuenta y tienda
          </button>

          <p id="mensaje" class="text-sm text-center font-medium hidden"></p>
          
          <p class="text-center text-xs text-gray-400 mt-4">
            Al registrarte, aceptas nuestros <a href="/terms" class="underline">Términos</a> y <a href="/privacy" class="underline">Privacidad</a>.
          </p>
        </form>
      </div>
    </div>
  </main>
</Layout>

<script>
  // Script robusto sin tipos estrictos de TS para evitar errores en cliente
  const form = document.getElementById('registro-form');
  const msg = document.getElementById('mensaje');
  const btn = document.getElementById('btn-submit');
  const subInput = document.getElementById('subdomain');

  // Tabs
  const tabOwner = document.getElementById('tab-owner');
  const tabEmployee = document.getElementById('tab-employee');
  const inputType = document.getElementById('input-type');

  // Fields to toggle
  const fieldShopName = document.getElementById('field-shop-name');
  const fieldSubdomain = document.getElementById('field-subdomain');
  const colName = document.getElementById('col-name'); // Para expandirlo
  const formTitle = document.getElementById('form-title');
  const formDesc = document.getElementById('form-desc');

  // LOGICA TABS
  function setMode(mode) {
    inputType.value = mode;
    if (mode === 'owner') {
        // UI
        tabOwner.classList.add('bg-white', 'dark:bg-slate-800', 'shadow-sm', 'text-blue-600', 'dark:text-blue-400');
        tabOwner.classList.remove('text-slate-500', 'dark:text-slate-400');
        tabEmployee.classList.remove('bg-white', 'dark:bg-slate-800', 'shadow-sm', 'text-blue-600', 'dark:text-blue-400');
        tabEmployee.classList.add('text-slate-500', 'dark:text-slate-400');

        // Fields
        fieldShopName.classList.remove('hidden');
        fieldSubdomain.classList.remove('hidden');
        colName.classList.remove('md:col-span-2');

        // Required
        fieldShopName.querySelector('input').required = true;
        subInput.required = true;

        // Texts
        formTitle.innerText = "Nueva Empresa";
        formDesc.innerText = "Crea tu tienda y empieza a vender hoy.";
        btn.innerText = "Crear cuenta y tienda";
    } else {
        // UI
        tabEmployee.classList.add('bg-white', 'dark:bg-slate-800', 'shadow-sm', 'text-blue-600', 'dark:text-blue-400');
        tabEmployee.classList.remove('text-slate-500', 'dark:text-slate-400');
        tabOwner.classList.remove('bg-white', 'dark:bg-slate-800', 'shadow-sm', 'text-blue-600', 'dark:text-blue-400');
        tabOwner.classList.add('text-slate-500', 'dark:text-slate-400');

        // Fields
        fieldShopName.classList.add('hidden');
        fieldSubdomain.classList.add('hidden');
        colName.classList.add('md:col-span-2');

        // Required
        fieldShopName.querySelector('input').required = false;
        subInput.required = false;

        // Texts
        formTitle.innerText = "Perfil de Trabajador";
        formDesc.innerText = "Regístrate para que te inviten a una tienda.";
        btn.innerText = "Crear mi perfil";
    }
  }

  if (tabOwner && tabEmployee) {
    tabOwner.addEventListener('click', () => setMode('owner'));
    tabEmployee.addEventListener('click', () => setMode('employee'));
  }

  // Forzar minúsculas y quitar caracteres raros en la URL
  if (subInput) {
    subInput.addEventListener('input', (e) => {
      const val = e.target.value;
      e.target.value = val.toLowerCase().replace(/[^a-z0-9-]/g, '');
    });
  }

  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      // UI Loading
      if(btn) btn.disabled = true;
      const originalText = btn ? btn.innerText : '';
      if(btn) btn.innerText = "Procesando...";
      if(msg) msg.classList.add('hidden');

      const formData = new FormData(e.target);
      const datos = Object.fromEntries(formData);

      try {
        const response = await fetch('/api/register', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(datos)
        });

        const result = await response.json();

        if (response.ok && result.success) {
          if(msg) {
            msg.classList.remove('hidden', 'text-red-600');
            msg.classList.add('text-green-600');
            msg.innerText = "¡Listo! Redirigiendo...";
          }
          
          form.reset();
          
          // REDIRECCIÓN INMEDIATA (Usamos la URL que nos da la API, ej: /hub)
          window.location.href = result.redirect || "/hub";

        } else {
          throw new Error(result.error || "Error en el registro");
        }
      } catch (error) {
        if(msg) {
            msg.classList.remove('hidden', 'text-green-600');
            msg.classList.add('text-red-600');
            msg.innerText = error.message;
        }
        if(btn) {
            btn.disabled = false;
            btn.innerText = originalText;
        }
      }
    });
  }
</script>
