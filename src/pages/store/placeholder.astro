---
import Layout from '~/layouts/Layout.astro';
import Hero from '~/components/widgets/Hero.astro';

const { currentShop } = Astro.locals;
const shopName = currentShop?.name || "Tienda";
---

<Layout metadata={{ title: `${shopName}` }}>
  
  {/* Contenedor Flex para centrar verticalmente y evitar scroll */}
  <div class="min-h-screen flex items-center justify-center bg-page">
      
      <Hero
        tagline="Tecnología TuStock"
        title={shopName}
        subtitle="Este comercio utiliza nuestro sistema de gestión de inventario, pero actualmente no tiene habilitada su tienda online pública."
        actions={[
          {
            variant: 'primary',
            text: 'Acceso Propietario',
            href: '/admin',
            icon: 'tabler:lock-access',
          },
          {
            text: 'Ir a TuStock.app',
            href: 'https://tustock.app',
            target: '_blank',
            icon: 'tabler:external-link',
          }
        ]}
      >
        {/* Slot para personalizar el título con estilos del tema */}
        <fragment slot="title">
            <span class="text-gray-900 dark:text-white">{shopName}</span>
        </fragment>
      </Hero>

  </div>

</Layout>