---
import StoreAdminLayout from '~/layouts/StoreAdminLayout.astro';
// CAMBIO IMPORTANTE: Usamos el Dashboard específico de tienda
import StoreDashboard from '~/components/store/admin/StoreDashboard.astro'; 

const { currentShop } = Astro.locals;
const session = Astro.cookies.get('session');

if (!session) return Astro.redirect('/login');

const metadata = { title: `Panel - ${currentShop?.name}` };
---

<StoreAdminLayout tenant={currentShop.slug} metadata={metadata}>
  
  {/* Cabecera de Página */}
  <div class="flex items-center justify-between mb-8">
      <div>
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Panel de Tienda</h1>
        <p class="text-sm text-gray-500">Gestión diaria de {currentShop.name}</p>
      </div>
      {/* Botones de acción rápida específicos de tienda */}
      <div class="flex gap-2">
         <button class="bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-bold hover:bg-blue-700 transition">
            Nuevo Pedido
         </button>
      </div>
  </div>

  {/* Cargamos el Dashboard Específico */}
  <StoreDashboard tenantId={currentShop.slug} />

</StoreAdminLayout>