---
import PageLayout from '~/layouts/PageLayout.astro';
import StoreHeader from '~/components/widgets/StoreHeader.astro';
import { Icon } from 'astro-icon/components';
import { decryptLicense } from '~/utils/crypto'; // <--- Importamos utilidad

// 1. SEGURIDAD DE SESIÓN (Copiar lógica de admin.astro para consistencia)
const session = Astro.cookies.get('session');
const { currentShop } = Astro.locals;
const env = Astro.locals.runtime?.env;

if (!session) return Astro.redirect(`/login?redirect=/admin`);

// (Simplificamos la auth aquí asumiendo que el middleware o admin previo ya filtró, pero por seguridad doble check)
const userId = session.value;
let isAuthorized = false;
let decryptedLicense = "Solo disponible en producción";

try {
    const db = env?.DB;
    if (db) {
        // Obtenemos también la license_encrypted
        const tenant = await db.prepare("SELECT id, license_encrypted FROM tenants WHERE slug = ?").bind(currentShop.slug).first();
        if(tenant) {
             const membership = await db.prepare("SELECT role FROM memberships WHERE user_id = ? AND tenant_id = ?").bind(userId, tenant.id).first();
             if(membership) {
                 isAuthorized = true;
                 // Desencriptar licencia
                 if (tenant.license_encrypted && env.MASTER_KEY) {
                     decryptedLicense = decryptLicense(tenant.license_encrypted, env.MASTER_KEY);
                 } else {
                     decryptedLicense = "No disponible (Falta Master Key)";
                 }
             }
        }
    } else if (import.meta.env.DEV) {
        isAuthorized = true;
        decryptedLicense = "DEV-LICENSE-KEY-12345";
    }
} catch (e) { console.error(e); }

if (!isAuthorized) return Astro.redirect('/store/admin');

const shopName = currentShop?.name || "Configuración";
const metadata = { title: `Ajustes - ${shopName}` };

const storeHeaderData = {
  links: [{ text: '← Volver al Panel', href: '/admin' }],
  actions: []
};

// Cargar Miembros (Renderizado Server-Side)
let members = [];
if (isAuthorized && env?.DB) {
    try {
        const tenantRes = await env.DB.prepare("SELECT id FROM tenants WHERE slug = ?").bind(currentShop.slug).first();
        if (tenantRes) {
            const membersRes = await env.DB.prepare(`
                SELECT u.full_name, u.email, m.role, m.status
                FROM memberships m
                JOIN users u ON m.user_id = u.id
                WHERE m.tenant_id = ?
            `).bind(tenantRes.id).all();
            members = membersRes.results || [];
        }
    } catch(e) { console.error("Error loading members", e); }
}
---

<PageLayout metadata={metadata}>
  <fragment slot="header">
    <StoreHeader {...storeHeaderData} shopName={`Ajustes: ${currentShop?.name}`} isSticky showToggleTheme />
  </fragment>

  <div class="min-h-screen bg-slate-50 dark:bg-slate-900 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto">

      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white flex items-center gap-3">
             <div class="p-2 bg-blue-100 dark:bg-blue-900/30 rounded-lg text-blue-600">
                <Icon name="tabler:settings" class="w-8 h-8" />
             </div>
             Configuración de la Tienda
        </h1>
        <p class="mt-2 text-gray-500 dark:text-gray-400">Personaliza la información pública de tu negocio.</p>
      </div>

      {/* Mensajes JS */}
      <div id="msg-container" class="hidden mb-6 p-4 rounded-lg flex items-center gap-2 animate-fade-in"></div>

      <div class="bg-white dark:bg-slate-800 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
        <div class="p-8 space-y-8">

            {/* SECCIÓN 1: Identidad */}
            <form id="form-update-name" class="space-y-6">
                <div>
                    <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4 border-b pb-2 border-gray-100 dark:border-gray-700">Identidad del Negocio</h3>

                    <div class="grid gap-6">
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-1">Nombre Público</label>
                            <input type="text" id="input-shop-name" value={currentShop?.name}
                                class="w-full px-4 py-2 bg-slate-50 dark:bg-slate-900 border border-gray-300 dark:border-slate-600 rounded-lg focus:ring-2 focus:ring-blue-500 outline-none transition" />
                            <p class="text-xs text-gray-500 mt-1">Este nombre aparecerá en el encabezado y en los títulos de la web.</p>
                        </div>

                        <div>
                             <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-1">Subdominio (Slug)</label>
                             <div class="flex items-center px-4 py-2 bg-gray-100 dark:bg-slate-800 border border-gray-200 dark:border-slate-700 rounded-lg text-gray-500 cursor-not-allowed">
                                <Icon name="tabler:lock" class="w-4 h-4 mr-2" />
                                {currentShop?.slug}.tustock.app
                             </div>
                             <p class="text-xs text-gray-400 mt-1">El subdominio no se puede cambiar automáticamente. Contacta con soporte.</p>
                        </div>
                    </div>
                </div>

                <div class="pt-4 flex justify-end">
                    <button type="submit" id="btn-update-name" class="btn-primary px-6 py-2 rounded-lg font-bold shadow-md hover:shadow-lg transition-all">
                        Guardar Cambios
                    </button>
                </div>
            </form>

            {/* SECCIÓN 1.5: Equipo */}
            <div class="mt-8">
                <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4 border-b pb-2 border-gray-100 dark:border-gray-700">Equipo y Permisos</h3>

                <div class="bg-gray-50 dark:bg-slate-900/50 rounded-lg p-4 mb-6">
                    <h4 class="text-sm font-bold mb-3 uppercase tracking-wider text-gray-500">Miembros Actuales</h4>
                    <ul class="space-y-3">
                        {members.map(m => (
                            <li class="flex items-center justify-between bg-white dark:bg-slate-800 p-3 rounded border border-gray-200 dark:border-slate-700">
                                <div>
                                    <div class="flex items-center gap-2">
                                        <p class="font-bold text-sm text-gray-800 dark:text-gray-200">{m.full_name}</p>
                                        {m.status === 'PENDING' && (
                                            <span class="px-1.5 py-0.5 bg-amber-100 text-amber-700 text-[10px] rounded font-bold uppercase tracking-wider">Pendiente</span>
                                        )}
                                    </div>
                                    <p class="text-xs text-gray-500">{m.email}</p>
                                </div>
                                <span class={`px-2 py-1 text-xs rounded font-bold uppercase ${m.role === 'OWNER' ? 'bg-purple-100 text-purple-800' : 'bg-blue-100 text-blue-800'}`}>
                                    {m.role}
                                </span>
                            </li>
                        ))}
                    </ul>
                </div>

                <form id="form-invite" class="flex gap-2 items-end">
                    <div class="flex-1">
                        <label class="block text-xs font-bold text-gray-500 mb-1">Invitar por Email</label>
                        <input type="email" id="input-invite-email" placeholder="usuario@email.com" required
                            class="w-full px-4 py-2 bg-white dark:bg-slate-900 border border-gray-300 dark:border-slate-600 rounded-lg text-sm" />
                    </div>
                    <div class="w-32">
                        <label class="block text-xs font-bold text-gray-500 mb-1">Rol</label>
                        <select id="input-invite-role" class="w-full px-4 py-2 bg-white dark:bg-slate-900 border border-gray-300 dark:border-slate-600 rounded-lg text-sm">
                            <option value="STAFF">Empleado</option>
                            <option value="MANAGER">Encargado</option>
                            <option value="OWNER">Propietario</option>
                        </select>
                    </div>
                    <button type="submit" id="btn-invite" class="px-4 py-2 bg-slate-800 text-white rounded-lg text-sm font-bold hover:bg-black transition-colors">
                        Añadir
                    </button>
                </form>
                <p class="text-[10px] text-gray-400 mt-2">* El usuario debe estar registrado previamente en TuStock.</p>
            </div>

            {/* SECCIÓN 2: LICENCIA Y CONEXIÓN */}
            <div class="bg-blue-50 dark:bg-blue-900/10 p-6 rounded-xl border border-blue-100 dark:border-blue-800">
                <h3 class="text-lg font-bold text-blue-900 dark:text-blue-100 mb-4 flex items-center gap-2">
                    <Icon name="tabler:key" class="w-5 h-5" />
                    Licencia de Escritorio
                </h3>
                <p class="text-sm text-blue-800 dark:text-blue-200 mb-4">
                    Usa esta clave para conectar la App de Escritorio (Windows/Mac) con esta tienda.
                    <br/><span class="font-bold">Nota:</span> Esta licencia es única para <u>{currentShop?.name}</u>.
                </p>

                <div class="relative">
                    <label class="block text-xs font-bold text-blue-600 dark:text-blue-300 uppercase tracking-wider mb-1">Clave de Activación</label>
                    <div class="flex gap-2">
                        <code class="flex-1 p-3 bg-white dark:bg-slate-900 border border-blue-200 dark:border-blue-800 rounded-lg font-mono text-center text-lg tracking-widest text-slate-700 dark:text-slate-300 select-all">
                            {decryptedLicense}
                        </code>
                        <button onclick={`navigator.clipboard.writeText('${decryptedLicense}')`} class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg font-bold shadow-sm transition-colors" title="Copiar">
                            <Icon name="tabler:copy" class="w-5 h-5" />
                        </button>
                    </div>
                </div>
            </div>

            {/* SECCIÓN 3: Contacto (Mockup) */}
            <div class="opacity-50 pointer-events-none relative">
                <div class="absolute inset-0 z-10"></div> {/* Bloqueo visual */}
                <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4 border-b pb-2 border-gray-100 dark:border-gray-700 flex justify-between">
                    Información de Contacto
                    <span class="text-xs bg-gray-200 text-gray-600 px-2 py-0.5 rounded uppercase self-center">Próximamente</span>
                </h3>
                <div class="grid md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-1">Teléfono WhatsApp</label>
                        <input type="text" disabled placeholder="+34 600 000 000" class="w-full px-4 py-2 border rounded-lg bg-gray-50" />
                    </div>
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-1">Email Visible</label>
                        <input type="email" disabled placeholder="info@tienda.com" class="w-full px-4 py-2 border rounded-lg bg-gray-50" />
                    </div>
                </div>
            </div>

        </div>
      </div>

    </div>
  </div>
</PageLayout>

<script define:vars={{ currentSlug: currentShop?.slug }}>
    // FUNCIONES DE CLIENTE PARA EVITAR 403 EN SUBDOMINIOS
    const msgContainer = document.getElementById('msg-container');

    function showMessage(text, isError) {
        msgContainer.classList.remove('hidden', 'bg-green-50', 'bg-red-50', 'text-green-700', 'text-red-700', 'border-green-200', 'border-red-200');
        msgContainer.classList.add(isError ? 'bg-red-50' : 'bg-green-50', isError ? 'text-red-700' : 'text-green-700', isError ? 'border-red-200' : 'border-green-200', 'border');
        msgContainer.innerHTML = `<strong>${isError ? 'Error' : 'Éxito'}:</strong> ${text}`;
    }

    // 1. UPDATE NAME
    const formUpdate = document.getElementById('form-update-name');
    if (formUpdate) {
        formUpdate.addEventListener('submit', async (e) => {
            e.preventDefault();
            const newName = document.getElementById('input-shop-name').value;
            const btn = document.getElementById('btn-update-name');
            btn.disabled = true; btn.innerText = "...";

            try {
                const res = await fetch('/api/store/update', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ newName, slug: currentSlug })
                });
                const data = await res.json();
                if (res.ok) {
                    showMessage(data.message, false);
                } else {
                    showMessage(data.error, true);
                }
            } catch (e) {
                showMessage("Error de conexión", true);
            }
            btn.disabled = false; btn.innerText = "Guardar Cambios";
        });
    }

    // 2. INVITE USER
    const formInvite = document.getElementById('form-invite');
    if (formInvite) {
        formInvite.addEventListener('submit', async (e) => {
            e.preventDefault();
            const email = document.getElementById('input-invite-email').value;
            const role = document.getElementById('input-invite-role').value;
            const btn = document.getElementById('btn-invite');
            btn.disabled = true; btn.innerText = "...";

            try {
                const res = await fetch('/api/store/invite', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email, role, slug: currentSlug })
                });
                const data = await res.json();
                if (res.ok) {
                    showMessage(data.message, false);
                    document.getElementById('input-invite-email').value = '';
                    setTimeout(() => location.reload(), 1500); // Recargar para ver al nuevo miembro
                } else {
                    showMessage(data.error, true);
                }
            } catch (e) {
                showMessage("Error de conexión", true);
            }
            btn.disabled = false; btn.innerText = "Añadir";
        });
    }
</script>
