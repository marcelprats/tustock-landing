---
import Layout from '~/layouts/PageLayout.astro';
import { Icon } from 'astro-icon/components';

// 1. SEGURIDAD: SI NO HAY COOKIE, AL LOGIN
const session = Astro.cookies.get('session');
if (!session || !session.value) {
  return Astro.redirect('/login');
}

// 2. OBTENER DATOS REALES
const userId = session.value;
const db = Astro.locals.runtime?.env?.DB;

let userStores = [];
let userName = "Usuario";

if (userId && db) {
  try {
    const userRes = await db.prepare("SELECT full_name FROM users WHERE id = ?").bind(userId).first();
    if (userRes) userName = userRes.full_name;

    const storesRes = await db.prepare(`
      SELECT t.id, t.name, t.slug, t.status, t.web_plan, m.role 
      FROM memberships m
      JOIN tenants t ON m.tenant_id = t.id
      WHERE m.user_id = ?
    `).bind(userId).all();
    
    if (storesRes.results) {
      const processedStores = [];
      
      for (const s of storesRes.results) {
        let currentStatus = s.status;

        // AUTO-ACTIVACIÃ“N: Si estÃ¡ PENDING, probamos si ya responde
        if (currentStatus === 'PENDING') {
          try {
            const checkUrl = import.meta.env.PROD 
              ? `https://${s.slug}.tustock.app` 
              : `http://localhost:4321/?tenant=${s.slug}`;

            const check = await fetch(checkUrl, { method: 'HEAD' });

            if (check.ok || check.status === 404 || check.status === 200) {
              await db.prepare("UPDATE tenants SET status = 'ACTIVE' WHERE id = ?").bind(s.id).run();
              currentStatus = 'ACTIVE';
            }
          } catch (e) {
            // Sigue sin responder
          }
        }

        processedStores.push({
          ...s,
          status: currentStatus,
          isPending: currentStatus === 'PENDING',
          url: currentStatus === 'ACTIVE' 
               ? (import.meta.env.PROD ? `https://${s.slug}.tustock.app` : `/?tenant=${s.slug}`)
               : '#'
        });
      }
      userStores = processedStores;
    }
  } catch (e) {
    console.error("Error cargando Hub:", e);
  }
}

const metadata = { title: 'Mis Tiendas - TuStock' };
