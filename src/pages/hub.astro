---
import Layout from '~/layouts/Layout.astro';
import { Icon } from 'astro-icon/components';

// 1. SEGURIDAD DE SESI√ìN
const session = Astro.cookies.get('session');
if (!session) return Astro.redirect('/login');

const userId = session.value;
const env = Astro.locals.runtime?.env;

// 2. OBTENER LAS TIENDAS DEL USUARIO (D1)
let myShops = [];
let userName = "Usuario";

try {
    const db = env?.DB;
    if (db) {
        // A) Obtener nombre del usuario (opcional, para saludar)
        const user = await db.prepare("SELECT name FROM users WHERE id = ?").bind(userId).first();
        if (user) userName = user.name;

        // B) Obtener las tiendas donde soy miembro
        // Hacemos JOIN para sacar los datos de la tienda (nombre, slug) y mi rol en ella
        const result = await db.prepare(`
            SELECT t.name, t.slug, t.plan, m.role 
            FROM memberships m
            JOIN tenants t ON m.tenant_id = t.id
            WHERE m.user_id = ?
        `).bind(userId).all();
        
        myShops = result.results || [];
    }
} catch (e) {
    console.error("Error cargando Hub:", e);
}

const metadata = { title: 'Mis Tiendas - TuStock' };
---

<Layout metadata={metadata}>
  <section class="min-h-screen bg-slate-50 dark:bg-slate-900 py-12 px-4 sm:px-6">
    
    <div class="max-w-5xl mx-auto">
        
        <div class="flex flex-col md:flex-row justify-between items-center mb-10 gap-4">
            <div>
                <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Hola, {userName} üëã</h1>
                <p class="text-gray-500 dark:text-gray-400 mt-1">Selecciona una tienda para gestionarla.</p>
            </div>
            
            <a href="/create-store" class="btn-primary flex items-center gap-2 px-5 py-2.5 rounded-full shadow-lg shadow-blue-500/20">
                <Icon name="tabler:plus" class="w-5 h-5" />
                Nueva Tienda
            </a>
        </div>

        {myShops.length > 0 ? (
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {myShops.map((shop: any) => (
                    <a 
                        href={`https://${shop.slug}.tustock.app/admin`} 
                        class="group relative bg-white dark:bg-slate-800 rounded-2xl border border-gray-200 dark:border-gray-700 p-6 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300"
                    >
                        <div class="absolute top-4 right-4">
                            <span class={`text-[10px] font-bold uppercase tracking-widest px-2 py-1 rounded-full border ${
                                shop.plan === 'PRO' ? 'bg-purple-100 text-purple-700 border-purple-200' : 'bg-gray-100 text-gray-600 border-gray-200'
                            }`}>
                                {shop.plan || 'FREE'}
                            </span>
                        </div>

                        <div class="w-12 h-12 rounded-xl bg-blue-50 dark:bg-blue-900/20 flex items-center justify-center text-blue-600 mb-4 group-hover:scale-110 transition-transform">
                            <Icon name="tabler:building-store" class="w-6 h-6" />
                        </div>

                        <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-1 group-hover:text-blue-600 transition-colors">
                            {shop.name}
                        </h3>
                        <p class="text-sm text-gray-500 font-mono mb-4">
                            {shop.slug}.tustock.app
                        </p>

                        <div class="pt-4 border-t border-gray-100 dark:border-gray-700 flex items-center justify-between text-sm">
                            <span class="text-gray-400">Tu Rol:</span>
                            <span class="font-semibold text-gray-700 dark:text-gray-300 flex items-center gap-1">
                                <Icon name="tabler:user-shield" class="w-4 h-4" />
                                {shop.role}
                            </span>
                        </div>
                    </a>
                ))}
            </div>
        ) : (
            /* ESTADO VAC√çO (Si no tiene tiendas) */
            <div class="text-center py-20 bg-white dark:bg-slate-800 rounded-3xl border border-dashed border-gray-300 dark:border-gray-700">
                <div class="w-20 h-20 bg-gray-50 dark:bg-slate-700 rounded-full flex items-center justify-center mx-auto mb-4 text-gray-400">
                    <Icon name="tabler:shopping-cart-off" class="w-10 h-10" />
                </div>
                <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">A√∫n no tienes tiendas</h3>
                <p class="text-gray-500 max-w-sm mx-auto mb-8">Empieza creando tu primera tienda para gestionar tu inventario.</p>
                <a href="/create-store" class="inline-flex items-center gap-2 px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium">
                    Crear mi primera tienda
                </a>
            </div>
        )}
        
        <div class="mt-12 text-center">
             <form action="/api/logout" method="POST">
                <button type="submit" class="text-red-500 hover:text-red-700 text-sm font-medium transition-colors">
                    Cerrar sesi√≥n en todo TuStock
                </button>
            </form>
        </div>

    </div>
  </section>
</Layout>